{
  "name": "monay-backend-common",
  "version": "1.0.0",
  "description": "Monay Common Backend Services - Centralized API for All Applications",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "NODE_ENV=production node src/index.js",
    "serve": "NODE_ENV=production node src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migration": "./scripts/safe-migration.sh",
    "migration:unsafe": "sequelize db:migrate",
    "migration:create": "sequelize migration:create --name",
    "seed": "sequelize db:seed",
    "seed:create": "sequelize seed:create --name",
    "lint": "eslint 'src/**/*.js' --fix",
    "format": "prettier-eslint 'src/**/*.{js,json}' --write",
    "type-check": "tsc --noEmit",
    "health-check": "node scripts/health-check.js",
    "blockchain:test": "node scripts/test-blockchain-connections.js",
    "wallet:test": "node scripts/test-wallet-services.js",
    "contracts:compile": "npx hardhat compile",
    "contracts:deploy": "npx hardhat run scripts/deploy-contracts.js",
    "contracts:deploy:testnet": "npx hardhat run scripts/deploy-contracts.js --network base-goerli",
    "contracts:verify": "npx hardhat verify",
    "solana:build": "cd solana-programs && anchor build",
    "solana:deploy": "cd solana-programs && anchor deploy",
    "solana:test": "cd solana-programs && anchor test",
    "bridge:test": "node scripts/test-bridge.js"
  },
