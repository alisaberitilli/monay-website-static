# Development Environment Configuration

# Environment
NODE_ENV=development
ENVIRONMENT=dev

# AWS RDS Database (Development)
DATABASE_URL=postgres://monay_dev:password@monay-dev-db.cluster-xxxxx.us-east-1.rds.amazonaws.com:5432/monay_dev
DB_HOST=monay-dev-db.cluster-xxxxx.us-east-1.rds.amazonaws.com
DB_PORT=5432
DB_NAME=monay_dev
DB_USER=monay_dev
DB_PASSWORD=${AWS_SECRET_DB_PASSWORD}

# AWS ElastiCache Redis (Development)
REDIS_URL=redis://default:password@monay-dev-cache.xxxxx.cache.amazonaws.com:6379
REDIS_HOST=monay-dev-cache.xxxxx.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=${AWS_SECRET_REDIS_PASSWORD}

# JWT & Auth
JWT_SECRET=${AWS_SECRET_JWT_SECRET}
JWT_EXPIRATION=24h
NEXTAUTH_SECRET=${AWS_SECRET_NEXTAUTH_SECRET}
NEXTAUTH_URL=https://dev.monay.com

# API URLs
BACKEND_API_URL=https://api-dev.monay.com
NEXT_PUBLIC_API_URL=https://api-dev.monay.com

# AWS Configuration
AWS_REGION=us-east-1
S3_BUCKET_NAME=monay-dev-uploads

# Blockchain Configuration (Testnet)
BASE_RPC_URL=https://sepolia.base.org
SOLANA_RPC_URL=https://api.devnet.solana.com
ETHEREUM_PRIVATE_KEY=${AWS_SECRET_ETH_PRIVATE_KEY}
SOLANA_PRIVATE_KEY=${AWS_SECRET_SOL_PRIVATE_KEY}

# External Services (Test Keys)
STRIPE_SECRET_KEY=sk_test_${AWS_SECRET_STRIPE_KEY}
STRIPE_WEBHOOK_SECRET=whsec_${AWS_SECRET_STRIPE_WEBHOOK}
SENDGRID_API_KEY=${AWS_SECRET_SENDGRID_KEY}
TWILIO_ACCOUNT_SID=${AWS_SECRET_TWILIO_SID}
TWILIO_AUTH_TOKEN=${AWS_SECRET_TWILIO_TOKEN}

# KYC/Compliance Providers (Sandbox)
PERSONA_API_KEY=${AWS_SECRET_PERSONA_KEY}
ALLOY_API_KEY=${AWS_SECRET_ALLOY_KEY}
ONFIDO_API_TOKEN=${AWS_SECRET_ONFIDO_TOKEN}

# Payment Providers (Sandbox)
TILLIPAY_API_KEY=${AWS_SECRET_TILLIPAY_KEY}
CIRCLE_API_KEY=${AWS_SECRET_CIRCLE_KEY}
MOONPAY_API_KEY=${AWS_SECRET_MOONPAY_KEY}

# Monitoring
DATADOG_API_KEY=${AWS_SECRET_DATADOG_KEY}
SENTRY_DSN=${AWS_SECRET_SENTRY_DSN}

# Feature Flags
ENABLE_BLOCKCHAIN=true
ENABLE_KYC=true
ENABLE_2FA=true
ENABLE_SANDBOX_MODE=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS
CORS_ORIGIN=https://dev.monay.com,https://admin-dev.monay.com,https://app-dev.monay.com,https://enterprise-dev.monay.com

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json