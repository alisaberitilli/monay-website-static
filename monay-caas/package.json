{
  "name": "monay-caas",
  "version": "0.1.0",
  "description": "Coin-as-a-Service (CaaS) Platform with dual rail support for Base (EVM) and Solana",
  "private": true,
  "workspaces": [
    "contracts/*",
    "services/*",
    "apps/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:services\" \"npm run dev:apps\"",
    "dev:services": "concurrently \"npm run dev:api\" \"npm run dev:ledger\" \"npm run dev:brf\"",
    "dev:apps": "concurrently \"npm run dev:console\" \"npm run dev:wallet\"",
    "dev:api": "cd services/api && npm run dev",
    "dev:ledger": "cd services/ledger && npm run dev",
    "dev:brf": "cd services/brf && npm run dev",
    "dev:console": "cd apps/console && npm run dev",
    "dev:wallet": "cd apps/wallet && npm run dev",
    "build": "npm run build:services && npm run build:apps",
    "build:services": "npm run build --workspaces --if-present",
    "build:apps": "npm run build --workspaces --if-present",
    "test": "npm run test:contracts && npm run test:services && npm run test:apps",
    "test:contracts": "npm run test --workspaces --if-present --prefix contracts",
    "test:services": "npm run test --workspaces --if-present --prefix services",
    "test:apps": "npm run test --workspaces --if-present --prefix apps",
    "deploy:testnet": "npm run deploy:contracts:testnet && npm run deploy:services:testnet",
    "deploy:contracts:testnet": "npm run deploy:testnet --workspaces --if-present --prefix contracts",
    "deploy:services:testnet": "npm run deploy:testnet --workspaces --if-present --prefix services",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "blockchain",
    "stablecoin",
    "defi",
    "caas",
    "base",
    "solana",
    "compliance",
    "wallet"
  ],
  "author": "Ali Saberi (Tilli / Monay)",
  "license": "UNLICENSED"
}

