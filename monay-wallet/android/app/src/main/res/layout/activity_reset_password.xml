<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:ignore="MissingPrefix">

    <data>

        <variable
            name="resetPasswordVM"
            type="com.monayuser.ui.resetpassword.ResetPasswordViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/activity_spash_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:layout_gravity="top"
                android:background="@color/transparent"
                android:minHeight="65sp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:onClick="@{()->resetPasswordVM.backToPreviousActivity()}"
                        android:padding="@dimen/dp_15">

                        <ImageView
                            android:id="@+id/back_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/full_transparent"
                            android:onClick="@{()->resetPasswordVM.backToPreviousActivity()}"
                            android:src="@mipmap/ic_back_white"
                            android:tint="@color/dark_black" />
                    </LinearLayout>

                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

            <ImageView
                android:id="@+id/splash_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@mipmap/ic_logo_blue" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_40"
                android:fontFamily="@font/cerapro_medium"
                android:singleLine="true"
                android:text="@string/reset_password_title"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/size_30"
                android:visibility="visible" />


            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_45"
                android:fontFamily="@font/cerapro_regular"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:text="@string/please_create_a_new_password"
                android:textAlignment="center"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/size_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginEnd="@dimen/dp_40"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    app:passwordToggleDrawable="@drawable/password_toggle_drawable"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/gray_strok_backgourd"
                        android:cursorVisible="true"
                        android:drawableRight="@mipmap/ic_hide_password"
                        android:drawableTint="@color/gray_color"
                        android:fontFamily="@font/cerapro_regular"
                        android:hint="@string/new_password"
                        android:inputType="textPassword"
                        android:padding="@dimen/dp_18"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/gray_color"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/size_15"></com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    app:passwordToggleDrawable="@drawable/password_toggle_drawable"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/confirm_password_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/gray_strok_backgourd"
                        android:cursorVisible="true"
                        android:drawableRight="@mipmap/ic_hide_password"
                        android:drawableTint="@color/gray_color"
                        android:fontFamily="@font/cerapro_regular"
                        android:hint="@string/confirm_new_password"
                        android:inputType="textPassword"
                        android:padding="@dimen/dp_18"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/gray_color"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/size_15"></com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/btnSignUP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:background="@drawable/rounded_btn_selector_yellowish"
                    android:fontFamily="@font/cerapro_medium"
                    android:gravity="center"
                    android:onClick="@{()-> resetPasswordVM.proceed()}"
                    android:padding="@dimen/dp_15"
                    android:text="@string/confirm"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_18" />

                <TextView
                    android:id="@+id/backToLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/underline"
                    android:fontFamily="@font/cerapro_medium"
                    android:lineSpacingExtra="8sp"
                    android:onClick="@{()-> resetPasswordVM.backToLogin()}"
                    android:text="@string/back_to_login"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/size_16" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>