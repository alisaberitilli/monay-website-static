<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:ignore="MissingPrefix">

    <data>

        <variable
            name="verifyCodeVM"
            type="com.monayuser.ui.forgotcodeverify.VerifyCodeViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/activity_spash_screen1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="65sp"
            android:layout_gravity="top"
            android:background="@color/transparent"
            android:minHeight="65sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:onClick="@{()->verifyCodeVM.backToPreviousActivity()}"
                    android:padding="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/full_transparent"
                        android:onClick="@{()->verifyCodeVM.backToPreviousActivity()}"
                        android:src="@mipmap/ic_back_white"
                        android:tint="@color/white" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/verifyCodeHeaderTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:gravity="center|start"
                        android:text="@string/verification_txt"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_20"
                        app:fontFamily="@font/cerapro_medium" />
                </LinearLayout>


            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/activity_spash_screen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar1"
                    android:layout_width="match_parent"
                    android:layout_height="65sp"
                    android:layout_gravity="top"
                    android:background="@color/transparent"
                    android:minHeight="65sp"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark"
                    android:visibility="gone"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp">

                    <RelativeLayout
                        android:id="@+id/headerLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:onClick="@{()->verifyCodeVM.backToPreviousActivity()}"
                            android:padding="@dimen/dp_15">

                            <ImageView
                                android:id="@+id/back_button1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/full_transparent"
                                android:onClick="@{()->verifyCodeVM.backToPreviousActivity()}"
                                android:src="@mipmap/ic_back_white"
                                android:tint="@color/white" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/verifyCodeHeaderTxt1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:gravity="center|start"
                                android:text="@string/verification_txt"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dp_20"
                                app:fontFamily="@font/cerapro_medium" />
                        </LinearLayout>


                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>

                <ImageView
                    android:id="@+id/splash_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_30"
                    android:src="@mipmap/ic_logo_blue"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_40"
                    android:fontFamily="@font/cerapro_medium"
                    android:singleLine="true"
                    android:text="@string/verification_code"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_30"
                    android:visibility="visible" />

                <TextView

                    android:id="@+id/forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_45"
                    android:fontFamily="@font/cerapro_regular"
                    android:gravity="center"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/forgot_code_desc"
                    android:textAlignment="center"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mobile_number_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:fontFamily="@font/cerapro_regular"
                        android:gravity="center"
                        android:lineSpacingExtra="8sp"
                        android:singleLine="true"
                        android:text="+91 792 256 3133"
                        android:textAlignment="center"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/size_16" />

                    <TextView
                        android:id="@+id/change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/cerapro_medium"
                        android:lineSpacingExtra="8sp"
                        android:onClick="@{()->verifyCodeVM.changeMobileNumber()}"
                        android:text="@string/change"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/size_16"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_30"
                    android:orientation="vertical">

                    <com.monayuser.utils.PinView
                        android:id="@+id/pinviewVerify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:visibility="visible"
                        app:forceKeyboard="false"
                        app:hint="0"
                        app:inputType="number"
                        app:pinHeight="@dimen/dp_40"
                        app:pinLength="6"
                        app:pinWidth="@dimen/dp_40"
                        app:splitWidth="@dimen/dp_10"
                        app:textSize="@dimen/size_7" />

                    <TextView
                        android:id="@+id/resend_otp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_20"
                        android:background="@drawable/underline"
                        android:fontFamily="@font/cerapro_medium"
                        android:lineSpacingExtra="8sp"
                        android:onClick="@{()->verifyCodeVM.resendOTP()}"
                        android:text="@string/resend_code"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/size_16" />

                    <TextView
                        android:id="@+id/btnSignUP"
                        android:layout_width="@dimen/dp_290"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_40"
                        android:layout_marginBottom="@dimen/dp_30"
                        android:background="@drawable/rounded_btn_selector_yellowish"
                        android:fontFamily="@font/cerapro_medium"
                        android:gravity="center"
                        android:onClick="@{()-> verifyCodeVM.proceed()}"
                        android:padding="@dimen/dp_15"
                        android:text="@string/confirm"
                        android:textAllCaps="false"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/size_18" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>