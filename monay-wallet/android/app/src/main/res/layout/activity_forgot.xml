<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:ignore="MissingPrefix">

    <data>

        <variable
            name="forgotPasswordVM"
            type="com.monayuser.ui.forgotpassword.ForgotPasswordViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/activity_spash_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:layout_gravity="top"
                android:background="@color/transparent"
                android:minHeight="65sp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:onClick="@{()->forgotPasswordVM.backToPreviousActivity()}"
                        android:padding="@dimen/dp_15">

                        <ImageView
                            android:id="@+id/back_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/full_transparent"
                            android:onClick="@{()->forgotPasswordVM.backToPreviousActivity()}"
                            android:src="@mipmap/ic_back_white"
                            android:tint="@color/dark_black" />
                    </LinearLayout>

                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

            <ImageView
                android:id="@+id/splash_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@mipmap/ic_logo_blue" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_40"
                android:fontFamily="@font/cerapro_medium"
                android:singleLine="true"
                android:text="@string/forgot_password_title"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/size_30"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_20"
                android:fontFamily="@font/cerapro_regular"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:text="@string/forgot_password_desc"
                android:textAlignment="center"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/size_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginEnd="@dimen/dp_40"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/mobileLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:layout_weight="1"
                        android:background="@drawable/gray_strok_backgourd"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinnerForgot"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/dark_black"
                            android:dropDownSelector="@color/dark_black"
                            android:popupBackground="@color/white"
                            android:visibility="gone"
                            tools:listitem="@layout/spinner_textview" />

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/ccp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            app:ccpDialog_textColor="@color/dark_black"
                            app:ccp_arrowColor="@color/dark_black"
                            app:ccp_arrowSize="@dimen/dp_25"
                            app:ccp_clickable="false"
                            app:ccp_showArrow="false"
                            app:ccp_defaultNameCode="US"
                            app:ccp_showFlag="false"
                            android:layout_marginTop="@dimen/dp_3"
                            app:ccp_showFullName="false"
                            app:ccp_showNameCode="false"
                            app:ccp_showPhoneCode="true"
                            android:visibility="gone"
                            app:ccp_textSize="@dimen/size_15" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/countryCodeTv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:drawableEnd="@mipmap/ic_down_arrow"
                            android:drawableTint="@color/dark_black"
                            android:drawablePadding="@dimen/dp_1"
                            android:fontFamily="@font/cerapro_medium"
                            android:hint="+1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:onClick="@{()-> forgotPasswordVM.navigator.countryCodeClick()}"
                            android:paddingEnd="@dimen/dp_8"
                            android:paddingStart="@dimen/dp_5"
                            android:text=""
                            android:textColor="@color/dark_black"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/size_18"
                            app:layout_constraintEnd_toStartOf="@id/guideline2"
                            app:layout_constraintStart_toEndOf="@+id/phoneIV"
                            app:layout_constraintTop_toBottomOf="@+id/dividerBelowEmail" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/county_picker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.6"
                        android:background="@drawable/gray_strok_backgourd"
                        android:drawableRight="@mipmap/ic_down_arrow"
                        android:fontFamily="@font/cerapro_medium"
                        android:gravity="center"
                        android:hint="@string/last_name"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_15"
                        android:singleLine="true"
                        android:text="+1"
                        android:textAlignment="center"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/gray_color"
                        android:textSize="@dimen/size_18"
                        android:visibility="gone" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="0.5">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/mobile_number_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/gray_strok_backgourd"
                            android:fontFamily="@font/cerapro_regular"
                            android:hint="@string/mobile_number"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLength="15"
                            android:padding="@dimen/dp_18"
                            android:singleLine="true"
                            android:textColor="@color/dark_black"
                            android:textColorHint="@color/gray_color"
                            android:textSize="@dimen/size_15"></com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>


                <TextView
                    android:id="@+id/useEmail_Instead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/white_underline"
                    android:fontFamily="@font/cerapro_medium"
                    android:lineSpacingExtra="8sp"
                    android:onClick="@{()-> forgotPasswordVM.useEmail()}"
                    android:text="@string/use_email_instead"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_14"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/or_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_20"
                    android:fontFamily="@font/cerapro_medium"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/or_text"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/size_16" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email_Layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/gray_strok_backgourd"
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/cerapro_regular"
                        android:hint="@string/email"
                        android:imeOptions="actionDone"
                        android:maxLength="50"
                        android:padding="@dimen/dp_18"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/gray_color"
                        android:textSize="@dimen/size_15"></com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/btnSignUP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:background="@drawable/rounded_btn_selector_yellowish"
                    android:fontFamily="@font/cerapro_medium"
                    android:gravity="center"
                    android:onClick="@{()-> forgotPasswordVM.proceed()}"
                    android:padding="@dimen/dp_15"
                    android:text="@string/send_code"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_18" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>