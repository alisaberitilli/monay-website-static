<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="setupVM"
            type="com.monayuser.ui.setup.SecuritySetupViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="65sp"
            android:layout_gravity="top"
            android:background="@color/colorPrimary"
            android:minHeight="65sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:onClick="@{()->setupVM.backToPreviousActivity()}"
                    android:padding="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/full_transparent"
                        android:onClick="@{()->setupVM.backToPreviousActivity()}"
                        android:src="@mipmap/ic_back_white"
                        android:tint="@color/white" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dp_120"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center|start"
                    android:text="@string/security"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_20"
                    app:fontFamily="@font/cerapro_medium" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/set_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:onClick="@{()->setupVM.setupPin()}"
                android:orientation="horizontal"
                android:padding="@dimen/dp_12"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@color/light_gray"
                    android:padding="@dimen/dp_12"
                    android:src="@mipmap/ic_pin" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/dp_70"
                    android:layout_marginEnd="@dimen/dp_70"

                    android:fontFamily="@font/cerapro_medium"
                    android:text="@string/pin"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/dp_8"
                    android:src="@mipmap/ic_left_arrow" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_20"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:maxLines="1"
                    android:text="@string/secure_transactions"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_20"
                    app:fontFamily="@font/cerapro_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_20"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:maxLines="1"
                    android:text="@string/use_monay_pin"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_18"
                    app:fontFamily="@font/cerapro_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_25"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:text="@string/you_can_set_4_digit_pin_to_secure_your_transactions"
                    android:textColor="@color/ligh_black"
                    android:textSize="@dimen/size_16"
                    app:fontFamily="@font/cerapro_regular" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_30"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:text="@string/_4_digit_monay_pin_exist"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_16"
                    app:fontFamily="@font/cerapro_medium" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_25">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/underline"
                        android:lineSpacingExtra="@dimen/dp_3"
                        android:onClick="@{()->setupVM.changePin()}"
                        android:text="@string/change_pin"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/size_18"
                        app:fontFamily="@font/cerapro_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/underline"
                        android:lineSpacingExtra="@dimen/dp_3"
                        android:onClick="@{()->setupVM.setupPin()}"
                        android:text="@string/forgot_pin_"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/size_18"
                        app:fontFamily="@font/cerapro_medium" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@color/light_gray" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/appLockTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_20"
                android:lineSpacingExtra="@dimen/dp_3"
                android:maxLines="1"
                android:text="@string/app_lock_security"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/size_20"
                android:visibility="visible"
                app:fontFamily="@font/cerapro_bold" />

            <RelativeLayout
                android:id="@+id/fingerprint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@color/light_gray"
                    android:padding="@dimen/dp_12"
                    android:visibility="gone"
                    android:src="@mipmap/ic_fingerprint" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_70"
                    android:fontFamily="@font/cerapro_medium"
                    android:text="@string/use_screen_lock"
                    android:layout_centerVertical="true"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_18" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchFingerPrint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_left_arrow" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_touch_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_5"
                android:visibility="visible"
                android:layout_marginRight="@dimen/dp_55"
                android:lineSpacingExtra="@dimen/dp_3"
                android:text="@string/secure_access_to_monay_wallet_by_using_the_same_faceid_fingerprint_and_pin_you_use_to_unlock_your_phone"
                android:textColor="@color/ligh_black"
                android:textSize="@dimen/size_16"
                app:fontFamily="@font/cerapro_regular" />

        </LinearLayout>
    </RelativeLayout>

</layout>

