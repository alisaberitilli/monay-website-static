<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="payMoneyVM"
            type="com.monayuser.ui.paymoney.PayMoneyViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarPayMoney"
            android:layout_width="match_parent"
            android:layout_height="65sp"
            android:layout_gravity="top"
            android:background="@color/colorPrimary"
            android:minHeight="65sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:onClick="@{()->payMoneyVM.backToPreviousActivity()}"
                    android:padding="@dimen/dp_12">

                    <ImageView
                        android:id="@+id/back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/full_transparent"
                        android:onClick="@{()->payMoneyVM.backToPreviousActivity()}"
                        android:src="@mipmap/ic_back_white"
                        android:tint="@color/white" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dp_120"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center|start"
                    android:text="@string/pay_money"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_20"
                    app:fontFamily="@font/cerapro_medium" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbarPayMoney"
            android:background="@color/white"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/light_blue_color"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingEnd="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_20">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userIV"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:layout_gravity="center"
                        android:gravity="center|top"
                        android:src="@mipmap/ic_user_icon"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/middle_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/size_15">

                        <TextView
                            android:id="@+id/full_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/cerapro_medium"
                            android:lineSpacingExtra="@dimen/dp_5"
                            android:text="Amy Mello"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/size_18"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/contactTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/dp_10"
                            android:fontFamily="@font/cerapro_medium"
                            android:text="123-456-78901"
                            android:textColor="@color/gray_color"
                            android:textSize="@dimen/size_16" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/or_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_25"
                    android:fontFamily="@font/cerapro_bold"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/amount"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/size_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_25"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cerapro_bold"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/dollor_sign"
                        android:textColor="@color/gray_color"
                        android:textSize="@dimen/size_28" />

                    <EditText
                        android:id="@+id/amount_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@color/transparent"
                        android:cursorVisible="true"
                        android:fontFamily="@font/cerapro_bold"
                        android:hint="@string/enter_amount"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/gray_light"
                        android:textSize="@dimen/size_28" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_25"
                    android:background="@color/gray_btn_bg_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_25"
                    android:fontFamily="@font/cerapro_bold"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/message_optional"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/size_14" />

                <EditText
                    android:id="@+id/message_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_25"
                    android:background="@color/transparent"
                    android:fontFamily="@font/cerapro_regular"
                    android:hint="@string/enter_message"
                    android:inputType="text"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:textColor="@color/dark_black"
                    android:textColorHint="@color/gray_light"
                    android:textSize="@dimen/size_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_25"
                    android:background="@color/gray_btn_bg_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_25"
                    android:background="@color/light_blue_color"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginRight="@dimen/dp_25"
                        android:fontFamily="@font/cerapro_bold"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/select_payment_method"
                        android:textColor="@color/gray_color"
                        android:textSize="@dimen/size_14" />

                    <RadioGroup
                        android:id="@+id/radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_25"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/card_radio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:button="@drawable/custom_checkbox"
                            android:checked="true"
                            android:fontFamily="@font/cerapro_medium"
                            android:paddingStart="@dimen/dp_10"
                            android:text="@string/card"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/size_14" />

                        <RadioButton
                            android:id="@+id/wallet_radio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:button="@drawable/custom_checkbox"
                            android:fontFamily="@font/cerapro_medium"
                            android:paddingStart="@dimen/dp_10"
                            android:text="@string/wallet"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/size_14" />

                    </RadioGroup>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/wallet_selection_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@color/transparent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/walletIV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="top"
                            android:src="@mipmap/ic_wallet"
                            android:visibility="visible" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/dp_10">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/cerapro_medium"
                                android:lineSpacingExtra="@dimen/dp_5"
                                android:text="@string/wallet_balance"
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/size_16"
                                android:visibility="visible" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_8"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:fontFamily="@font/cerapro_medium"
                                    android:text="@string/available_for_payment"
                                    android:textColor="@color/gray_color"
                                    android:textSize="@dimen/size_16" />

                                <TextView
                                    android:id="@+id/walletAmountText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:fontFamily="@font/cerapro_medium"
                                    android:text="$ 10,000"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/size_16" />
                            </LinearLayout>

                        </LinearLayout>

                        <RadioButton
                            android:id="@+id/walletRadioBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:visibility="gone" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_wallet_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginEnd="@dimen/dp_25"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:background="@drawable/rounded_btn_selector_yellowish"
                        android:fontFamily="@font/cerapro_medium"
                        android:gravity="center"
                        android:onClick="@{()->payMoneyVM.successToSentMoney()}"
                        android:padding="@dimen/dp_15"
                        android:text="@string/pay"
                        android:textAllCaps="false"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/size_18"
                        android:visibility="visible" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_25"
                    android:fontFamily="@font/cerapro_medium"
                    android:text="@string/saved_cards"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_18"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/card_selection_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_25"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:nestedScrollingEnabled="false"
                        android:visibility="gone"
                        tools:itemCount="5"
                        tools:listitem="@layout/row_item_card" />

                    <TextView
                        android:id="@+id/tvNoCard"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_100"
                        android:layout_below="@+id/myCardTool"
                        android:layout_marginTop="@dimen/dp_10"
                        android:fontFamily="@font/cerapro_medium"
                        android:gravity="center"
                        android:text="@string/no_card_found"
                        android:textColor="@color/gray_color"
                        android:textSize="@dimen/size_16"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10">

                        <RadioButton
                            android:id="@+id/radioDebitCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:button="@drawable/custom_checkbox" />

                        <TextView
                            android:id="@+id/tv_pay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_toRightOf="@+id/radioDebitCard"
                            android:fontFamily="@font/cerapro_medium"
                            android:text="@string/pay_via_new_card"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/size_16" />


                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/bg_color"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/imageCreditCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/ic_card_unselect" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toLeftOf="@+id/radioCreditCard"
                            android:layout_toRightOf="@+id/imageCreditCard"
                            android:fontFamily="@font/cerapro_medium"
                            android:text="@string/create_card"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/size_14" />

                        <RadioButton
                            android:id="@+id/radioCreditCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true" />


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:background="@drawable/card_background"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_15"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/LoginTextInputLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/cardHolderNameEt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@color/white"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                                android:fontFamily="@font/cerapro_regular"
                                android:hint="@string/name_on_card"
                                android:maxLength="30"
                                android:imeOptions="actionNext"
                                android:inputType="textPersonName|textCapWords"
                                android:padding="@dimen/dp_15"
                                android:singleLine="true"
                                android:textColor="@color/dark_black"
                                android:textColorHint="@color/gray_color"
                                android:textSize="@dimen/size_15">

                            </com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/cardNumberLayout"
                            style="@style/LoginTextInputLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/cardNumberEt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:background="@color/white"
                                android:fontFamily="@font/cerapro_regular"
                                android:hint="@string/card_number"
                                android:imeOptions="actionDone"
                                android:inputType="number|textNoSuggestions"
                                android:maxLength="20"
                                android:padding="@dimen/dp_15"
                                android:singleLine="true"
                                android:textColor="@color/dark_black"
                                android:textColorHint="@color/gray_color"
                                android:textSize="@dimen/size_15" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/LoginTextInputLayoutStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_weight="2.3">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/cardExMonth"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@color/white"
                                    android:focusable="false"
                                    android:fontFamily="@font/cerapro_regular"
                                    android:hint="@string/expiry_date_mm_yy"
                                    android:imeOptions="actionNext"
                                    android:padding="@dimen/dp_15"
                                    android:singleLine="true"
                                    android:textColor="@color/dark_black"
                                    android:textColorHint="@color/gray_color"
                                    android:textSize="@dimen/size_15"></com.google.android.material.textfield.TextInputEditText>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/LoginTextInputLayoutStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_weight="1.5">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/cardCVV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@color/white"
                                    android:fontFamily="@font/cerapro_regular"
                                    android:hint="@string/cvv"
                                    android:imeOptions="actionDone"
                                    android:inputType="numberPassword"
                                    android:maxLength="4"
                                    android:padding="@dimen/dp_15"
                                    android:singleLine="true"
                                    android:textColor="@color/dark_black"
                                    android:textColorHint="@color/gray_color"
                                    android:textSize="@dimen/size_15"></com.google.android.material.textfield.TextInputEditText>
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/cb_save"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:button="@drawable/custom_checkbox_new"
                            android:fontFamily="@font/cerapro_regular"
                            android:paddingStart="@dimen/dp_10"
                            android:text="@string/save_this_card_for_faster_payment"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/size_16"
                            android:visibility="visible" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:background="@drawable/rounded_btn_selector_yellowish"
                            android:fontFamily="@font/cerapro_medium"
                            android:gravity="center"
                            android:onClick="@{()->payMoneyVM.successToSentMoney()}"
                            android:padding="@dimen/dp_12"
                            android:text="@string/pay"
                            android:textAllCaps="false"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/size_18" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</layout>

<!--    com.monayuser.utils.FormattedNumberEditText-->