<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.scan.ScanFragment">

    <data>

        <variable
            name="scanVM"
            type="com.monayuser.ui.scan.ScanViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/topLayout">

        <RelativeLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/view_one">

            </FrameLayout>

            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_margin="@dimen/dp_20"
                android:onClick="@{()->scanVM.cancelScan()}"
                android:src="@mipmap/ic_cross_grey"
                android:tint="@color/white" />

            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dp_20"
                android:onClick="@{()->scanVM.flashClick()}"
                android:src="@mipmap/flash_light"
                android:tint="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottomLayout"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_30"
                android:fontFamily="@font/cerapro_medium"
                android:gravity="center"
                android:text="@string/scan_any_qr_code_to_pay"
                android:textColor="#E1E1E1"
                android:textSize="@dimen/size_16" />

            <View
                android:id="@+id/view_one"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_10"
                android:layout_above="@id/bottomLayout"
                android:layout_marginBottom="-25dp" />

            <LinearLayout
                android:id="@+id/bottomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/white_squar_scan_bg"
                android:orientation="vertical"
                android:padding="@dimen/dp_20">

                <EditText
                    android:id="@+id/scanEtNameSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/gray_strok_backgourd"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="false"
                    android:focusedByDefault="false"
                    android:fontFamily="@font/cerapro_regular"
                    android:hint="@string/enter_name_and_number"
                    android:imeOptions="actionDone"
                    android:onClick="@{()->scanVM.searchEditClick()}"
                    android:padding="@dimen/dp_15"
                    android:singleLine="true"
                    android:textColor="@color/dark_black"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/size_15" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:fontFamily="@font/cerapro_medium"
                    android:text="@string/recent"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_16" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerRecentContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:visibility="visible"
                    tools:itemCount="1"
                    tools:listitem="@layout/item_recent_contact_list" />

                <TextView
                    android:id="@+id/noRecentContact"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:fontFamily="@font/cerapro_medium"
                    android:gravity="center"
                    android:text="@string/there_are_no_recent_contacts"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/size_16"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_show_my_qr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/border_bg_yellow"
                    android:fontFamily="@font/cerapro_medium"
                    android:gravity="center"
                    android:onClick="@{()->scanVM.openMyCode()}"
                    android:padding="@dimen/dp_15"
                    android:text="@string/show_my_code"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_16" />


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/noInternetConnectionLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-100dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/noInternet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/cerapro_medium"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/no_internet"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/size_18"
                android:visibility="visible" />

            <com.dd.ShadowLayout
                android:id="@+id/try_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/noInternet"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:minWidth="180dp"
                android:onClick="@{()->scanVM.tryAgain()}"
                app:sl_cornerRadius="30dp"
                app:sl_dx="3dp"
                app:sl_dy="3dp"
                app:sl_fillColor="@color/colorPrimary"
                app:sl_shadowColor="#C5E1F1"
                app:sl_shadowRadius="10dp">

                <Button
                    android:id="@+id/try_again_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="top|center"
                    android:background="#00000000"
                    android:fontFamily="@font/cerapro_medium"
                    android:gravity="center"
                    android:onClick="@{()->scanVM.tryAgain()}"
                    android:text="@string/try_again_text"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_18" />

            </com.dd.ShadowLayout>

        </RelativeLayout>
    </RelativeLayout>

</layout>