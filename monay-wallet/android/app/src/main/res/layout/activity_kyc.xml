<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="kycVM"
            type="com.monayuser.ui.kyc.KYCViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/myCardTool"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="top"
            android:background="@color/colorPrimary"
            android:minHeight="65sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:background="@color/full_transparent"
                        android:onClick="@{()->kycVM.clickOnBackButton()}"
                        android:src="@mipmap/ic_back_white"
                        android:tint="@color/white" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@string/kyc"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_18"
                    app:fontFamily="@font/cerapro_medium" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myCardTool">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/dp_10">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:fontFamily="@font/cerapro_medium"
                    android:text="@string/complete_your_kyc"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_18"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/dp_20" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/dp_20" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:fontFamily="@font/cerapro_regular"
                    android:text="@string/_1_select_picture_identification_document"
                    android:textColor="@color/ligh_black"
                    android:textSize="@dimen/size_14"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/tv_complete" />

                <RadioGroup
                    android:id="@+id/rg_document"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/tv_select">

                    <RadioButton
                        android:id="@+id/rb_passport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_3"
                        android:layout_marginTop="@dimen/dp_20"
                        android:button="@drawable/custom_checkbox"
                        android:fontFamily="@font/cerapro_medium"
                        android:paddingStart="@dimen/dp_10"
                        android:text="@string/passport"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/size_16" />

                    <RadioButton
                        android:id="@+id/rb_license"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_3"
                        android:layout_marginTop="@dimen/dp_15"
                        android:button="@drawable/custom_checkbox"
                        android:fontFamily="@font/cerapro_medium"
                        android:paddingStart="@dimen/dp_10"
                        android:text="@string/driver_s_license"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/size_16" />

                    <RadioButton
                        android:id="@+id/rb_national"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_3"
                        android:layout_marginTop="@dimen/dp_15"
                        android:button="@drawable/custom_checkbox"
                        android:fontFamily="@font/cerapro_medium"
                        android:paddingStart="@dimen/dp_10"
                        android:text="@string/national_id"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/size_16" />
                </RadioGroup>

                <View
                    android:id="@+id/view_image"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_180"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/gray_dotted_rectangle_border"
                    android:onClick="@{()->kycVM.clickOnImageUpload()}"
                    app:layout_constraintEnd_toEndOf="@id/guideline1"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/rg_document" />

                <ImageView
                    android:id="@+id/iv_upload_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/upload_image"
                    android:onClick="@{()->kycVM.clickOnImageUpload()}"
                    android:src="@mipmap/ic_upload_doc"
                    app:layout_constraintBottom_toTopOf="@id/tv_upload_image"
                    app:layout_constraintEnd_toEndOf="@id/view_image"
                    app:layout_constraintStart_toStartOf="@id/view_image"
                    app:layout_constraintTop_toTopOf="@id/view_image"
                    app:layout_constraintVertical_chainStyle="packed" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_upload_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="@font/cerapro_medium"
                    android:onClick="@{()->kycVM.clickOnImageUpload()}"
                    android:text="@string/upload_document"
                    android:textColor="@color/ligh_black"
                    android:textSize="@dimen/size_14"
                    app:layout_constraintBottom_toTopOf="@id/tv_support_image"
                    app:layout_constraintEnd_toEndOf="@id/view_image"
                    app:layout_constraintStart_toStartOf="@id/view_image"
                    app:layout_constraintTop_toBottomOf="@id/iv_upload_image" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_support_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:fontFamily="@font/cerapro_medium"
                    android:onClick="@{()->kycVM.clickOnImageUpload()}"
                    android:text="@string/support_file_pdf_jpg_jpeg_png"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/size_12"
                    app:layout_constraintBottom_toBottomOf="@id/view_image"
                    app:layout_constraintEnd_toEndOf="@id/view_image"
                    app:layout_constraintStart_toStartOf="@id/view_image"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_image" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:constraint_referenced_ids="tv_support_image, tv_upload_image, iv_upload_image, view_image" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_10"
                    app:cardCornerRadius="@dimen/dp_15"
                    android:onClick="@{()->kycVM.clickOnIdentificationDoc()}"
                    app:layout_constraintEnd_toStartOf="@id/ivDelete"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/rg_document">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_identification"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_180"
                            android:contentDescription="@string/upload_image"
                            android:visibility="gone"
                            android:onClick="@{()->kycVM.clickForNoEvent()}"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.monayuser.utils.TouchyWebView
                            android:id="@+id/wv_identification"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_180"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/iv_upload_image_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/upload_image"
                            android:src="@mipmap/ic_upload_doc"
                            android:onClick="@{()->kycVM.clickOnIdentificationDoc()}"
                            app:layout_constraintBottom_toTopOf="@id/tv_upload_image_new"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:visibility="gone"
                            app:layout_constraintVertical_chainStyle="packed" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_upload_image_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:fontFamily="@font/cerapro_medium"
                            android:text="@string/document_uploaded"
                            android:onClick="@{()->kycVM.clickOnIdentificationDoc()}"
                            android:textColor="@color/dark_black"
                            android:visibility="gone"
                            android:textSize="@dimen/size_14"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_upload_image_new" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/ivDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/ic_delete_card"
                    android:contentDescription="@string/delete"
                    android:onClick="@{()->kycVM.clickOnDeleteImage()}"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/cv_image"
                    app:layout_constraintEnd_toEndOf="@id/guideline1"
                    app:layout_constraintTop_toTopOf="@id/cv_image" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="cv_image, view_image" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_select_proof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:fontFamily="@font/cerapro_regular"
                    android:text="@string/_2_select_proof_of_address_obtained"
                    android:textColor="@color/ligh_black"
                    android:textSize="@dimen/size_14"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/barrier_image" />

                <RadioGroup
                    android:id="@+id/rg_proof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/tv_select_proof">

                    <RadioButton
                        android:id="@+id/rb_bill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_3"
                        android:layout_marginTop="@dimen/dp_20"
                        android:button="@drawable/custom_checkbox"
                        android:fontFamily="@font/cerapro_medium"
                        android:paddingStart="@dimen/dp_10"
                        android:text="Utility Bill"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/size_16" />

                    <RadioButton
                        android:id="@+id/rb_bank_statement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_3"
                        android:layout_marginTop="@dimen/dp_15"
                        android:button="@drawable/custom_checkbox"
                        android:fontFamily="@font/cerapro_medium"
                        android:paddingStart="@dimen/dp_10"
                        android:text="Bank Statement"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/size_16" />

                    <RadioButton
                        android:id="@+id/rb_rental"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_3"
                        android:layout_marginTop="@dimen/dp_15"
                        android:button="@drawable/custom_checkbox"
                        android:fontFamily="@font/cerapro_medium"
                        android:paddingStart="@dimen/dp_10"
                        android:text="Rental Contract"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/size_16" />

                    <RadioButton
                        android:id="@+id/rb_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_3"
                        android:layout_marginTop="@dimen/dp_15"
                        android:button="@drawable/custom_checkbox"
                        android:fontFamily="@font/cerapro_medium"
                        android:paddingStart="@dimen/dp_10"
                        android:text="Post Marked Mail"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/size_16" />
                </RadioGroup>


                <View
                    android:id="@+id/view_document"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_180"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/gray_dotted_rectangle_border"
                    android:onClick="@{()->kycVM.clickOnDocumentUpload()}"
                    app:layout_constraintEnd_toEndOf="@id/guideline1"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/rg_proof" />

                <ImageView
                    android:id="@+id/iv_upload_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/upload_document"
                    android:onClick="@{()->kycVM.clickOnDocumentUpload()}"
                    android:src="@mipmap/ic_upload_doc"
                    app:layout_constraintBottom_toTopOf="@id/tv_upload_doc"
                    app:layout_constraintEnd_toEndOf="@id/view_document"
                    app:layout_constraintStart_toStartOf="@id/view_document"
                    app:layout_constraintTop_toTopOf="@id/view_document"
                    app:layout_constraintVertical_chainStyle="packed" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_upload_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="@font/cerapro_medium"
                    android:onClick="@{()->kycVM.clickOnDocumentUpload()}"
                    android:text="@string/upload_document"
                    android:textColor="@color/ligh_black"
                    android:textSize="@dimen/size_14"
                    app:layout_constraintBottom_toTopOf="@id/tv_support"
                    app:layout_constraintEnd_toEndOf="@id/view_document"
                    app:layout_constraintStart_toStartOf="@id/view_document"
                    app:layout_constraintTop_toBottomOf="@id/iv_upload_doc" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_support"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:fontFamily="@font/cerapro_medium"
                    android:onClick="@{()->kycVM.clickOnDocumentUpload()}"
                    android:text="@string/support_file_pdf_jpg_jpeg_png"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/size_12"
                    app:layout_constraintBottom_toBottomOf="@id/view_document"
                    app:layout_constraintEnd_toEndOf="@id/view_document"
                    app:layout_constraintStart_toStartOf="@id/view_document"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_doc" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:constraint_referenced_ids="tv_support, tv_upload_doc, iv_upload_doc, view_document" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_doc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_10"
                    app:cardCornerRadius="@dimen/dp_15"
                    android:onClick="@{()->kycVM.clickOnAddressProofDoc()}"
                    app:layout_constraintEnd_toStartOf="@id/iv_delete_doc"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/rg_proof">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_document"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_180"
                            android:contentDescription="@string/upload_image"
                            android:visibility="gone"
                            android:onClick="@{()->kycVM.clickForNoEvent()}"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.monayuser.utils.TouchyWebView
                            android:id="@+id/wv_document"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_180"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/iv_upload_doc_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/upload_image"
                            android:src="@mipmap/ic_upload_doc"
                            app:layout_constraintBottom_toTopOf="@id/tv_upload_doc_new"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:onClick="@{()->kycVM.clickOnAddressProofDoc()}"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:visibility="gone"
                            app:layout_constraintVertical_chainStyle="packed" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_upload_doc_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:onClick="@{()->kycVM.clickOnAddressProofDoc()}"
                            android:fontFamily="@font/cerapro_medium"
                            android:text="@string/document_uploaded"
                            android:textColor="@color/dark_black"
                            android:visibility="gone"
                            android:textSize="@dimen/size_14"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_upload_doc_new" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/iv_delete_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/ic_delete_card"
                    android:contentDescription="@string/delete"
                    android:onClick="@{()->kycVM.clickOnDeleteDoc()}"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/cv_doc"
                    app:layout_constraintEnd_toEndOf="@id/guideline1"
                    app:layout_constraintTop_toTopOf="@id/cv_doc" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="cv_doc, view_document" />

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@drawable/rounded_btn_selector_yellowish"
                    android:fontFamily="@font/cerapro_medium"
                    android:gravity="center"
                    android:onClick="@{()->kycVM.clickOnSubmitButton()}"
                    android:padding="@dimen/dp_15"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_18"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/guideline1"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/barrier_doc"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>