<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/ic_cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:src="@mipmap/ic_cross_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cerapro_medium"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp_5"
        android:text="@string/are_you_sure_you_want_to_ndecline_this_request"
        android:textColor="@color/dark_black"
        android:textSize="@dimen/size_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_cross" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_reason"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_30"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/size_30"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/gray_strok_backgourd"
            android:fontFamily="@font/cerapro_regular"
            android:gravity="start"
            android:hint="@string/reason_for_decline_optional"
            android:imeOptions="actionDone"
            android:lines="4"
            android:padding="@dimen/dp_15"
            android:textColor="@color/dark_black"
            android:textColorHint="@color/gray_color"
            android:textSize="@dimen/size_14"></com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_weight="1"
        android:background="@drawable/border_bg_red"
        android:fontFamily="@font/cerapro_medium"
        android:gravity="center"
        android:minHeight="0dp"
        android:padding="@dimen/dp_15"
        android:text="@string/no"
        android:textAllCaps="false"
        android:textColor="@color/red"
        android:textSize="@dimen/size_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_yes"
        app:layout_constraintStart_toStartOf="@id/tl_reason"
        app:layout_constraintTop_toBottomOf="@id/tl_reason" />

    <Button
        android:id="@+id/btn_yes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_weight="1"
        android:background="@drawable/rounded_btn_selector_yellowish"
        android:fontFamily="@font/cerapro_medium"
        android:gravity="center"
        android:minHeight="0dp"
        android:padding="@dimen/dp_15"
        android:text="@string/yes"
        android:textAllCaps="false"
        android:textColor="@color/dark_black"
        android:textSize="@dimen/size_14"
        app:layout_constraintEnd_toEndOf="@id/tl_reason"
        app:layout_constraintStart_toEndOf="@id/btn_no"
        app:layout_constraintTop_toBottomOf="@id/tl_reason" />
</androidx.constraintlayout.widget.ConstraintLayout>