<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="walletVM"
            type="com.monayuser.ui.wallet.WalletViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_400"
            android:background="@mipmap/bg_profile"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="65sp"
            android:layout_gravity="top"
            android:background="@color/transparent"
            android:minHeight="65sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent">

                <LinearLayout
                    android:id="@+id/back_button_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:onClick="@{()->walletVM.backToPreviousActivity()}"
                    android:padding="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/full_transparent"
                        android:onClick="@{()->walletVM.backToPreviousActivity()}"
                        android:src="@mipmap/ic_back_white"
                        android:tint="@color/white" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/screenTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toRightOf="@+id/back_button_view"
                    android:gravity="center|start"
                    android:text="@string/my_wallet"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_20"
                    app:fontFamily="@font/cerapro_medium" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/addMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/size_15"
                    android:gravity="center|end"
                    android:onClick="@{()->walletVM.addMoney()}"
                    android:text="@string/add_money"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_16"
                    app:fontFamily="@font/cerapro_medium" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:constraint_referenced_ids="tv_text, total_cashback, ll_bottom, sent_receive_view" />

                <TextView
                    android:id="@+id/tv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_25"
                    android:fontFamily="@font/cerapro_regular"
                    android:text="@string/wallet_balance"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/total_cashback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:fontFamily="@font/cerapro_bold"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_35"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_text"
                    tools:text="$4,56,789" />

                <LinearLayout
                    android:id="@+id/sent_receive_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_35"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/total_cashback">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/sentCardView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_125"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_weight="1"
                        android:elevation="@dimen/dp_4"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/dp_10"
                        app:cardElevation="@dimen/dp_4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_15"
                                android:layout_marginTop="@dimen/dp_15"
                                android:background="@mipmap/ic_sent" />

                            <TextView
                                android:id="@+id/full_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_15"
                                android:fontFamily="@font/cerapro_regular"
                                android:lineSpacingExtra="@dimen/dp_5"
                                android:text="@string/sent"
                                android:textColor="@color/almost_txt"
                                android:textSize="@dimen/size_14"
                                android:visibility="visible" />
                            <TextView
                                android:id="@+id/sentAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_marginRight="@dimen/dp_15"
                                android:layout_marginBottom="@dimen/dp_15"
                                android:fontFamily="@font/cerapro_bold"
                                android:lineSpacingExtra="@dimen/dp_5"
                                android:minLines="2"
                                android:maxLines="2"
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/size_16"
                                android:visibility="visible"
                                android:maxLength="25"
                                tools:text="$ 00.00" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/receivedCardView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_125"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_weight="1"
                        android:elevation="@dimen/dp_4"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/dp_10"
                        app:cardElevation="@dimen/dp_4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_15"
                                android:layout_marginTop="@dimen/dp_15"
                                android:background="@mipmap/ic_received" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_15"
                                android:fontFamily="@font/cerapro_regular"
                                android:text="@string/received"
                                android:lineSpacingExtra="@dimen/dp_5"
                                android:textColor="@color/almost_txt"
                                android:textSize="@dimen/size_14"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/receiveAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_marginRight="@dimen/dp_15"
                                android:layout_marginBottom="@dimen/dp_15"
                                android:fontFamily="@font/cerapro_bold"
                                android:lineSpacingExtra="@dimen/dp_5"
                                android:minLines="2"
                                android:maxLines="2"
                                android:maxLength="25"
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/size_16"
                                android:visibility="visible"
                                tools:text="$ 00.00" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <View
                    android:id="@+id/view_background"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/white_success_curve"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sent_receive_view" />

                <LinearLayout
                    android:id="@+id/ll_bottom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_success_curve"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/view_background"
                    app:layout_constraintVertical_bias="0.0">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/titleText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:background="@drawable/white_success_curve"
                            android:fontFamily="@font/cerapro_bold"
                            android:lineSpacingExtra="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_20"
                            android:paddingTop="@dimen/dp_20"
                            android:paddingBottom="@dimen/dp_5"
                            android:text="@string/transactions"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/size_18"
                            android:visibility="visible" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/titleText"
                            android:background="@color/white">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/transactionRecycler"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/titleText"
                                android:background="@color/white"
                                android:nestedScrollingEnabled="false"
                                android:visibility="visible"
                                tools:listitem="@layout/row_wallet" />
                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/noInternetConnectionLayout"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="-100dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/noInternet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/cerapro_medium"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="@string/no_internet"
                        android:textColor="@color/gray_color"
                        android:textSize="@dimen/size_18"
                        android:visibility="visible" />

                    <com.dd.ShadowLayout
                        android:id="@+id/try_again"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/noInternet"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:minWidth="180dp"
                        android:onClick="@{()->walletVM.tryAgain()}"
                        app:sl_cornerRadius="30dp"
                        app:sl_dx="3dp"
                        app:sl_dy="3dp"
                        app:sl_fillColor="@color/colorPrimary"
                        app:sl_shadowColor="#C5E1F1"
                        app:sl_shadowRadius="10dp">

                        <Button
                            android:id="@+id/try_again_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:layout_gravity="top|center"
                            android:background="#00000000"
                            android:fontFamily="@font/cerapro_medium"
                            android:gravity="center"
                            android:onClick="@{()->walletVM.tryAgain()}"
                            android:text="@string/try_again_text"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_18" />

                    </com.dd.ShadowLayout>

                </RelativeLayout>


                <TextView
                    android:id="@+id/txtNoArticalFound"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fontFamily="@font/cerapro_medium"
                    android:gravity="center"
                    android:text="@string/no_data_found"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/size_18"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/view_background" />

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/light_red"
                    android:indeterminateTintMode="src_atop"
                    android:padding="@dimen/dp_10"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

