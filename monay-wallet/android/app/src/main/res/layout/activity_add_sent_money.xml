<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:ignore="MissingPrefix">

    <data>

        <variable
            name="addSentMoneyVM"
            type="com.monayuser.ui.successaddmoney.AddSentMoneyViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/dp_60"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_verified" />


                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_25"
                    android:fontFamily="@font/cerapro_bold"
                    android:gravity="center"
                    android:text="@string/successfully_add_money"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_20"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@color/transparent"
                    android:fontFamily="@font/cerapro_bold"
                    android:gravity="center"
                    android:hint="@string/enter_amount"
                    android:singleLine="true"
                    android:text="$ 5,023"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gray"
                    android:textCursorDrawable="@color/colorPrimary"
                    android:textSize="@dimen/size_35" />

                <TextView
                    android:id="@+id/transactionID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_60"
                    android:fontFamily="@font/cerapro_medium"
                    android:gravity="center"
                    android:text="@string/transaction_id"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_18"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btnSignUP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_40"
                    android:background="@drawable/rounded_btn_selector_yellowish"
                    android:fontFamily="@font/cerapro_medium"
                    android:gravity="center"
                    android:onClick="@{()-> addSentMoneyVM.goToHome()}"
                    android:padding="@dimen/dp_15"
                    android:text="@string/go_to_home"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_18" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</layout>