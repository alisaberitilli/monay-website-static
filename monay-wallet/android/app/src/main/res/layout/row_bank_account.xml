<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_5"
            android:fontFamily="@font/cerapro_bold"
            android:text="Well Fargo &amp; Co."
            android:textColor="@color/dark_black"
            android:textSize="@dimen/size_18"
            app:layout_constraintEnd_toStartOf="@id/iv_delete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:fontFamily="@font/cerapro_medium"
            android:text="A/C Number:"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/size_16"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:fontFamily="@font/cerapro_medium"
            android:text="xxxx 0002"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/size_16"
            android:visibility="visible"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_account_text"
            app:layout_constraintStart_toEndOf="@id/tv_account_text" />

        <TextView
            android:id="@+id/tv_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:fontFamily="@font/cerapro_medium"
            android:text="xxxx xxxx xxxx 0002"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/size_16"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name" />


        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/ic_delete_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_name" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/light_gray"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/tv_account_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>