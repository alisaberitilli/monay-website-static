<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:ignore="MissingPrefix">

    <data>

        <variable
            name="mPinVM"
            type="com.monayuser.ui.setpin.MPinViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_12"
                android:background="@color/full_transparent"
                android:onClick="@{()->mPinVM.backToPreviousScreen()}"
                android:src="@mipmap/ic_back_white"
                android:tint="@color/white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/setPinHeaderTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center|start"
                android:text="@string/pin"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_20"
                app:fontFamily="@font/cerapro_medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#68CDFF"
            android:orientation="vertical"
            android:visibility="gone"></LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/headerLayout"
            android:layout_marginTop="0.1dp"
            android:background="@color/white"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/activity_spash_screen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mPin_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_30"
                    android:src="@mipmap/ic_logo_blue"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/pinTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_40"
                    android:fontFamily="@font/cerapro_medium"
                    android:singleLine="true"
                    android:text="@string/reset_monay_pin"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_30"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/verifyCode_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_45"
                    android:fontFamily="@font/cerapro_regular"
                    android:gravity="center"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/enter_a_new_4_digit_pin_of_your_choice_to_secure_your_account"
                    android:textAlignment="center"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_16" />

                <LinearLayout
                    android:id="@+id/olderPinLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_30"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/olderPinTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_45"
                        android:layout_marginTop="@dimen/dp_40"
                        android:layout_marginRight="@dimen/dp_45"
                        android:fontFamily="@font/cerapro_regular"
                        android:gravity="center"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/enter_old_pin_txt"
                        android:textAlignment="center"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/size_16"
                        android:visibility="gone" />

                    <com.monayuser.utils.PinView
                        android:id="@+id/oldPinview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_10"
                        android:cursorVisible="true"
                        android:focusable="false"
                        android:imeOptions="actionNext"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:visibility="gone"
                        app:forceKeyboard="false"
                        app:hint="0"
                        app:inputType="number"
                        app:password="true"
                        app:pinBackground="@drawable/gray_strok_backgourd"
                        app:pinHeight="@dimen/dp_45"
                        app:pinLength="4"
                        app:pinWidth="@dimen/dp_65"
                        app:splitWidth="@dimen/dp_5"
                        app:textSize="@dimen/size_7" />

                    <TextView
                        android:id="@+id/newPinTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_45"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_45"
                        android:fontFamily="@font/cerapro_regular"
                        android:gravity="center"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/enter_new_pin"
                        android:textAlignment="center"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/size_16" />

                    <com.monayuser.utils.PinView
                        android:id="@+id/pinview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_10"
                        android:cursorVisible="true"
                        android:imeOptions="actionNext"
                        android:textCursorDrawable="@drawable/cursor_color"
                        app:forceKeyboard="false"
                        app:hint="0"
                        app:inputType="number"
                        app:password="true"
                        app:pinBackground="@drawable/gray_strok_backgourd"
                        app:pinHeight="@dimen/dp_45"
                        app:pinLength="4"
                        app:pinWidth="@dimen/dp_65"
                        app:splitWidth="@dimen/dp_5"
                        app:textSize="@dimen/size_7" />

                    <TextView
                        android:id="@+id/confirmNewPinTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_45"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_45"
                        android:fontFamily="@font/cerapro_regular"
                        android:gravity="center"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/confirm_new_pin"
                        android:textAlignment="center"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/size_16" />

                    <com.monayuser.utils.PinView
                        android:id="@+id/confirmPinview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_10"
                        android:cursorVisible="true"
                        android:imeOptions="actionDone"
                        android:textCursorDrawable="@drawable/cursor_color"
                        app:forceKeyboard="false"
                        app:hint="0"
                        app:inputType="number"
                        app:password="true"
                        app:pinBackground="@drawable/gray_strok_backgourd"
                        app:pinHeight="@dimen/dp_45"
                        app:pinLength="4"
                        app:pinWidth="@dimen/dp_65"
                        app:splitWidth="@dimen/dp_5"
                        app:textSize="@dimen/size_7" />

                    <Button
                        android:id="@+id/btnSet"
                        android:layout_width="@dimen/dp_275"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_40"
                        android:layout_marginBottom="@dimen/dp_30"
                        android:background="@drawable/rounded_btn_selector_yellowish"
                        android:fontFamily="@font/cerapro_medium"
                        android:gravity="center"
                        android:onClick="@{()-> mPinVM.setPin()}"
                        android:padding="@dimen/dp_15"
                        android:text="@string/save"
                        android:textAllCaps="true"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/size_16" />

                    <TextView
                        android:id="@+id/backToSecurty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_45"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_45"
                        android:background="@drawable/underline"
                        android:fontFamily="@font/cerapro_regular"
                        android:gravity="center"
                        android:lineSpacingExtra="8sp"
                        android:onClick="@{()-> mPinVM.backToSecurity()}"
                        android:text="@string/back_to_security"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/size_16"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/bgLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A1012153"
            android:visibility="gone"/>
    </RelativeLayout>
</layout>