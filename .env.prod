# Production Environment Configuration

# Environment
NODE_ENV=production
ENVIRONMENT=prod

# AWS RDS Database (Production - Multi-AZ)
DATABASE_URL=postgres://monay_prod:${AWS_SECRET_DB_PASSWORD}@monay-prod-db.cluster-xxxxx.us-east-1.rds.amazonaws.com:5432/monay_prod
DB_HOST=monay-prod-db.cluster-xxxxx.us-east-1.rds.amazonaws.com
DB_PORT=5432
DB_NAME=monay_prod
DB_USER=monay_prod
DB_PASSWORD=${AWS_SECRET_DB_PASSWORD}

# AWS ElastiCache Redis (Production - Cluster Mode)
REDIS_URL=redis://default:${AWS_SECRET_REDIS_PASSWORD}@monay-prod-cache.xxxxx.cache.amazonaws.com:6379
REDIS_HOST=monay-prod-cache.xxxxx.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=${AWS_SECRET_REDIS_PASSWORD}

# JWT & Auth
JWT_SECRET=${AWS_SECRET_JWT_SECRET}
JWT_EXPIRATION=8h
NEXTAUTH_SECRET=${AWS_SECRET_NEXTAUTH_SECRET}
NEXTAUTH_URL=https://monay.com

# API URLs
BACKEND_API_URL=https://api.monay.com
NEXT_PUBLIC_API_URL=https://api.monay.com

# AWS Configuration
AWS_REGION=us-east-1
S3_BUCKET_NAME=monay-prod-uploads

# Blockchain Configuration (Mainnet)
BASE_RPC_URL=https://mainnet.base.org
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
ETHEREUM_PRIVATE_KEY=${AWS_SECRET_ETH_PRIVATE_KEY}
SOLANA_PRIVATE_KEY=${AWS_SECRET_SOL_PRIVATE_KEY}

# External Services (Production Keys)
STRIPE_SECRET_KEY=sk_live_${AWS_SECRET_STRIPE_KEY}
STRIPE_WEBHOOK_SECRET=whsec_${AWS_SECRET_STRIPE_WEBHOOK}
SENDGRID_API_KEY=${AWS_SECRET_SENDGRID_KEY}
TWILIO_ACCOUNT_SID=${AWS_SECRET_TWILIO_SID}
TWILIO_AUTH_TOKEN=${AWS_SECRET_TWILIO_TOKEN}

# KYC/Compliance Providers (Production)
PERSONA_API_KEY=${AWS_SECRET_PERSONA_KEY}
ALLOY_API_KEY=${AWS_SECRET_ALLOY_KEY}
ONFIDO_API_TOKEN=${AWS_SECRET_ONFIDO_TOKEN}

# Payment Providers (Production)
TILLIPAY_API_KEY=${AWS_SECRET_TILLIPAY_KEY}
CIRCLE_API_KEY=${AWS_SECRET_CIRCLE_KEY}
MOONPAY_API_KEY=${AWS_SECRET_MOONPAY_KEY}

# Monitoring
DATADOG_API_KEY=${AWS_SECRET_DATADOG_KEY}
SENTRY_DSN=${AWS_SECRET_SENTRY_DSN}

# Feature Flags
ENABLE_BLOCKCHAIN=true
ENABLE_KYC=true
ENABLE_2FA=true
ENABLE_SANDBOX_MODE=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=https://monay.com,https://admin.monay.com,https://app.monay.com,https://enterprise.monay.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json