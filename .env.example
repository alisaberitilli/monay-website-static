# Environment Configuration Example
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development
ENVIRONMENT=dev

# Database
DATABASE_URL=postgres://monay_user:password@localhost:5432/monay
DB_HOST=localhost
DB_PORT=5432
DB_NAME=monay
DB_USER=monay_user
DB_PASSWORD=your_secure_password

# Redis
REDIS_URL=redis://default:password@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# JWT & Auth
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRATION=24h
NEXTAUTH_SECRET=your_nextauth_secret_key
NEXTAUTH_URL=http://localhost:3000

# API URLs
BACKEND_API_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=monay-uploads

# Blockchain Configuration
BASE_RPC_URL=https://sepolia.base.org
SOLANA_RPC_URL=https://api.devnet.solana.com
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key
SOLANA_PRIVATE_KEY=your_solana_private_key

# External Services
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
SENDGRID_API_KEY=your_sendgrid_api_key
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# KYC/Compliance Providers
PERSONA_API_KEY=your_persona_api_key
ALLOY_API_KEY=your_alloy_api_key
ONFIDO_API_TOKEN=your_onfido_token

# Payment Providers
TILLIPAY_API_KEY=your_tillipay_api_key
CIRCLE_API_KEY=your_circle_api_key
MOONPAY_API_KEY=your_moonpay_api_key

# Monitoring
DATADOG_API_KEY=your_datadog_api_key
SENTRY_DSN=your_sentry_dsn

# Feature Flags
ENABLE_BLOCKCHAIN=true
ENABLE_KYC=false
ENABLE_2FA=true
ENABLE_SANDBOX_MODE=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3002,http://localhost:3003,http://localhost:3007

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json