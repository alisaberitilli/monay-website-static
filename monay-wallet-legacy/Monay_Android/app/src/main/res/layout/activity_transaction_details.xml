<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="transactionDetailsVM"
            type="com.monayuser.ui.transactiondetails.TransactionDetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarPayMoney"
            android:layout_width="match_parent"
            android:layout_height="56sp"
            android:layout_gravity="top"
            android:background="@color/colorPrimary"
            android:minHeight="65sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:onClick="@{()->transactionDetailsVM.backToPreviousActivity()}"
                    android:padding="@dimen/dp_12">

                    <ImageView
                        android:id="@+id/back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/full_transparent"
                        android:onClick="@{()->transactionDetailsVM.backToPreviousActivity()}"
                        android:src="@mipmap/ic_back_white"
                        android:tint="@color/white" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dp_120"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center|start"
                    android:text="@string/transaction_detail"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_18"
                    app:fontFamily="@font/cerapro_medium" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/toolbarPayMoney"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/light_blue_color"
                    app:layout_constraintBottom_toTopOf="@id/view_three"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userIV"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginTop="@dimen/dp_20"
                    android:src="@mipmap/ic_user_icon"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="@font/cerapro_medium"
                    android:gravity="center"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_30"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/userIV"
                    tools:text="$4,56,789" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_paid_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:fontFamily="@font/cerapro_regular"
                    android:gravity="center"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/size_14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_total"
                    tools:text="@string/paid_to" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:fontFamily="@font/cerapro_medium"
                    android:gravity="center"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_18"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_paid_text"
                    tools:text="Bahnnon Ingram" />

                <View
                    android:id="@+id/view_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="44dp"
                    android:background="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_name" />

                <View
                    android:id="@+id/view_two"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:background="@drawable/light_gray_background"
                    app:layout_constraintBottom_toBottomOf="@id/view_five"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_paid_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:drawableStart="@mipmap/ic_t_c_check"
                    android:drawablePadding="@dimen/dp_5"
                    android:fontFamily="@font/cerapro_medium"
                    android:gravity="center_vertical"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_16"
                    android:layout_marginEnd="@dimen/dp_20"
                    app:layout_constraintEnd_toEndOf="@id/view_two"
                    app:layout_constraintStart_toStartOf="@id/view_two"
                    app:layout_constraintTop_toTopOf="@id/space"
                    tools:text="Bahnnon Ingram" />

                <Space
                    android:id="@+id/space"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_7"
                    app:layout_constraintBottom_toTopOf="@id/view_three"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:drawableStart="@mipmap/ic_t_c_check"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableTint="@color/transparent"
                    android:fontFamily="@font/cerapro_regular"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/size_14"
                    app:layout_constraintStart_toStartOf="@id/view_two"
                    app:layout_constraintTop_toBottomOf="@id/tv_paid_amount"
                    tools:text="29 May 2020, 02:54 PM" />

                <View
                    android:id="@+id/view_four"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/gray_color"
                    app:layout_constraintEnd_toEndOf="@id/view_two"
                    app:layout_constraintStart_toStartOf="@id/view_two"
                    app:layout_constraintTop_toBottomOf="@id/tv_time" />

                <TextView
                    android:id="@+id/tv_message_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:fontFamily="@font/cerapro_bold"
                    android:text="@string/message"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/size_14"
                    app:layout_constraintStart_toStartOf="@id/view_two"
                    app:layout_constraintTop_toBottomOf="@id/view_four" />

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:background="@color/transparent"
                    android:fontFamily="@font/cerapro_regular"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_16"
                    app:layout_constraintEnd_toEndOf="@id/view_two"
                    app:layout_constraintStart_toStartOf="@id/tv_message_text"
                    app:layout_constraintTop_toBottomOf="@id/tv_message_text"
                    tools:text="Payment for party" />

                <TextView
                    android:id="@+id/tv_trans_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:fontFamily="@font/cerapro_bold"
                    android:text="@string/transaction_id"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/size_14"
                    app:layout_constraintStart_toStartOf="@id/view_two"
                    app:layout_constraintTop_toBottomOf="@id/tv_message" />

                <TextView
                    android:id="@+id/tv_transaction_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:background="@color/transparent"
                    android:fontFamily="@font/cerapro_regular"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_16"
                    app:layout_constraintEnd_toEndOf="@id/view_two"
                    app:layout_constraintStart_toStartOf="@id/tv_trans_text"
                    app:layout_constraintTop_toBottomOf="@id/tv_trans_text"
                    tools:text="4564231231565" />

                <TextView
                    android:id="@+id/tv_payment_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:fontFamily="@font/cerapro_bold"
                    android:text="@string/payment_through"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/size_14"
                    app:layout_constraintStart_toStartOf="@id/view_two"
                    app:layout_constraintTop_toBottomOf="@id/tv_transaction_id" />

                <TextView
                    android:id="@+id/tv_payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:background="@color/transparent"
                    android:fontFamily="@font/cerapro_regular"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_16"
                    app:layout_constraintEnd_toEndOf="@id/view_two"
                    app:layout_constraintStart_toStartOf="@id/tv_payment_text"
                    app:layout_constraintTop_toBottomOf="@id/tv_payment_text"
                    tools:text="Card, ending 0002" />

                <View
                    android:id="@+id/view_five"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_payment" />

                <Button
                    android:id="@+id/btn_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_50"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@drawable/border_bg_yellow"
                    android:fontFamily="@font/cerapro_bold"
                    android:gravity="center"
                    android:onClick="@{()->transactionDetailsVM.clickOnShareReceipt()}"
                    android:paddingStart="@dimen/dp_25"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_25"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="@string/share_receipt"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_16"
                    app:layout_constraintVertical_bias="0.99"
                    app:layout_constraintTop_toBottomOf="@id/view_two"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/view_two" />

                <ImageView
                    android:id="@+id/splash_logo"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_logo_blue"
                    app:layout_constraintBottom_toBottomOf="@id/btn_share"
                    app:layout_constraintStart_toStartOf="@id/view_two"
                    app:layout_constraintTop_toTopOf="@id/btn_share" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>