<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="faqVM"
            type="com.monayuser.ui.faq.FaqViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="65sp"
            android:layout_gravity="top"
            android:background="@color/colorPrimary"
            android:minHeight="65sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:onClick="@{()->faqVM.backToPreviousActivity()}"
                    android:padding="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/full_transparent"
                        android:onClick="@{()->faqVM.backToPreviousActivity()}"
                        android:src="@mipmap/ic_back_white"
                        android:tint="@color/white" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dp_120"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center|start"
                    android:text="@string/faq"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_20"
                    app:fontFamily="@font/cerapro_medium" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:background="@color/white">

            <ExpandableListView
                android:id="@+id/ex_faq"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:childDivider="@color/light_gray"
                android:divider="@color/light_gray"
                android:dividerHeight="1dp"
                android:scrollbars="none"
                android:groupIndicator="@null"
                android:transcriptMode="alwaysScroll" />

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateTint="@color/light_red"
                android:indeterminateTintMode="src_atop"
                android:padding="10dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtNoArticalFound"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:fontFamily="@font/cerapro_medium"
                android:gravity="center"
                android:text="@string/no_data_found"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/size_18"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/web_view_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/relative_progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/img_loading_wait_time"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginTop="@dimen/dp_200"
                        android:background="@color/full_transparent" />

                </RelativeLayout>

                <WebView
                    android:id="@+id/web_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:padding="@dimen/dp_15"
                    android:visibility="visible" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/noRecordFoundView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_200"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/noOrderImageView"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:src="@mipmap/excla_sign"
                    android:tint="@color/colorPrimary"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/noOrderFoundTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_45"
                    android:fontFamily="@font/cerapro_medium"
                    android:gravity="center"
                    android:text="@string/no_internet"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_18"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/noInternetConnectionLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="-100dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/noInternet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/cerapro_medium"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/no_internet"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/size_18"
                android:visibility="visible" />

            <com.dd.ShadowLayout
                android:id="@+id/try_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/noInternet"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:minWidth="180dp"
                android:onClick="@{()->faqVM.tryAgain()}"
                app:sl_cornerRadius="30dp"
                app:sl_dx="3dp"
                app:sl_dy="3dp"
                app:sl_fillColor="@color/colorPrimary"
                app:sl_shadowColor="#C5E1F1"
                app:sl_shadowRadius="10dp">

                <Button
                    android:id="@+id/try_again_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="top|center"
                    android:background="#00000000"
                    android:fontFamily="@font/cerapro_medium"
                    android:gravity="center"
                    android:onClick="@{()->faqVM.tryAgain()}"
                    android:text="@string/try_again_text"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_18" />

            </com.dd.ShadowLayout>

        </RelativeLayout>
    </RelativeLayout>

</layout>

