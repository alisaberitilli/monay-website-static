<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="myContactVM"
            type="com.monayuser.ui.mycontact.MyContactViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/myContactTool"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="top"
            android:background="@color/colorPrimary"
            android:minHeight="65sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/firstLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/back_button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/full_transparent"
                        android:onClick="@{()->myContactVM.backToPreviousActivity()}"
                        android:src="@mipmap/ic_back_white"
                        android:tint="@color/white" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/headerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center|start"
                    android:text="@string/my_contacts"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_20"

                    app:fontFamily="@font/cerapro_medium" />

                <ImageView
                    android:id="@+id/contactSearchImg"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_60"
                    android:drawableTint="@color/white"
                    android:onClick="@{()->myContactVM.filterContact()}"
                    android:src="@mipmap/ic_serach" />

                <ImageView
                    android:id="@+id/scanImg1"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:drawableTint="@color/white"
                    android:onClick="@{()->myContactVM.scanClick()}"
                    android:src="@mipmap/ic_scan" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/searchLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@color/full_transparent"
                    android:onClick="@{()->myContactVM.backToPreviousActivity()}"
                    android:src="@mipmap/ic_back_white"
                    android:tint="@color/white" />

                <EditText
                    android:id="@+id/searchEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_toRightOf="@+id/back_button"
                    android:background="@drawable/search_edit_background"
                    android:cursorVisible="true"
                    android:drawableLeft="@mipmap/search_icon"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableTint="@color/white"
                    android:ellipsize="end"
                    android:fontFamily="@font/cerapro_regular"
                    android:hint="@string/enter_name_and_number"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="55dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textCursorDrawable="@drawable/white_cursor"
                    android:textSize="@dimen/size_16">

                </EditText>

                <LinearLayout
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_27"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_70"
                    android:background="@color/white" />

                <ImageView
                    android:id="@+id/crossImage"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_30"
                    android:onClick="@{()->myContactVM.filterCancel()}"
                    android:src="@mipmap/ic_scan"
                    android:tint="@color/white"
                    android:visibility="gone"></ImageView>

                <ImageView
                    android:id="@+id/scanImg"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_30"
                    android:drawableTint="@color/white"
                    android:onClick="@{()->myContactVM.scanClick()}"
                    android:src="@mipmap/ic_scan" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/recent_payments"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/size_18"
            android:visibility="visible"
            app:fontFamily="@font/cerapro_medium"
            app:layout_constraintTop_toBottomOf="@id/myContactTool"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/myRecentContactRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            tools:itemCount="3"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            tools:listitem="@layout/item_recent_contact_list"
            app:layout_constraintTop_toBottomOf="@id/recentText"/>

        <TextView
            android:id="@+id/txtNoRecentUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:fontFamily="@font/cerapro_medium"
            android:text="@string/there_are_no_recent_contacts"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_16"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/recentText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="myRecentContactRecyclerView, txtNoRecentUser"/>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            app:layout_constraintTop_toBottomOf="@id/barrier_recent"
            android:background="@color/devider_color" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/sv_contacts"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view1"
                app:layout_constraintBottom_toBottomOf="parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/contactText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/contacts_on_monay"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_18"
                    android:visibility="gone"
                    app:fontFamily="@font/cerapro_medium" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/myContactRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:visibility="gone"
                    tools:itemCount="3"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_transaction_list"
                    app:layout_constraintTop_toBottomOf="@id/contactText"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_all_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/all_contacts"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_18"
                    android:visibility="visible"
                    app:fontFamily="@font/cerapro_medium"
                    app:layout_constraintTop_toBottomOf="@id/myContactRecyclerView"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_all_contacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:visibility="gone"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_transaction_list"
                    app:layout_constraintTop_toBottomOf="@id/tv_all_contact"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.monayuser.utils.NestedListView
                    android:id="@+id/lvContacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    app:layout_constraintTop_toBottomOf="@id/tv_all_contact"
                    app:layout_constraintStart_toStartOf="parent"
                    android:nestedScrollingEnabled="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:visibility="visible"
                    android:scrollbars="none"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/btnProceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_25"
            android:background="@drawable/rounded_btn_selector_yellowish"
            android:fontFamily="@font/cerapro_medium"
            android:gravity="center"
            android:elevation="@dimen/dp_3"
            android:onClick="@{()->myContactVM.clickOnProceedButton()}"
            android:padding="@dimen/dp_15"
            android:text="@string/proceed"
            android:textAllCaps="false"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/size_18"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/myContactTool"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@color/red"
            android:background="@color/white"
            android:paddingBottom="@dimen/dp_20"
            android:text=""
            android:textSize="@dimen/size_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/noInternet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cerapro_medium"
            android:padding="3dp"
            android:gravity="center"
            android:text="@string/no_internet"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/size_18"
            android:visibility="gone"
            app:layout_constraintVertical_bias="0.44"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myContactTool"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.dd.ShadowLayout
            android:id="@+id/try_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noInternet"
            android:layout_marginTop="@dimen/dp_10"
            android:minWidth="180dp"
            android:onClick="@{()->myContactVM.tryAgain()}"
            app:sl_cornerRadius="30dp"
            app:sl_dx="3dp"
            android:visibility="gone"
            app:sl_dy="3dp"
            app:sl_fillColor="@color/colorPrimary"
            app:sl_shadowColor="#C5E1F1"
            app:sl_shadowRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/noInternet">

            <Button
                android:id="@+id/try_again_btn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="top|center"
                android:background="#00000000"
                android:fontFamily="@font/cerapro_medium"
                android:gravity="center"
                android:onClick="@{()->myContactVM.tryAgain()}"
                android:text="@string/try_again_text"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/size_18" />

        </com.dd.ShadowLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/noContactText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_contact_found"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/size_18"
            android:visibility="gone"
            app:fontFamily="@font/cerapro_medium"
            app:layout_constraintVertical_bias="0.35"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view1"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.dd.ShadowLayout
            android:id="@+id/sync_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:minWidth="180dp"
            android:onClick="@{()->myContactVM.syncContact()}"
            app:sl_cornerRadius="30dp"
            app:sl_dx="3dp"
            app:sl_dy="3dp"
            android:visibility="gone"
            app:sl_fillColor="@color/colorPrimary"
            app:sl_shadowColor="#C5E1F1"
            app:sl_shadowRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/noContactText">

            <Button
                android:id="@+id/sync_contact_btn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="top|center"
                android:background="#00000000"
                android:fontFamily="@font/cerapro_medium"
                android:gravity="center"
                android:onClick="@{()->myContactVM.syncContact()}"
                android:text="@string/sync_contact_text"
                android:textAllCaps="false"
                android:clickable="true"
                android:enabled="true"
                android:textColor="@color/white"
                android:textSize="@dimen/size_18" />

        </com.dd.ShadowLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>