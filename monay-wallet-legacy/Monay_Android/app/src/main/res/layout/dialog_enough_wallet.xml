<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background">

    <ImageView
        android:id="@+id/ic_cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_10"
        android:src="@mipmap/ic_cross_black"
        android:visibility="visible" />



    <TextView
        android:layout_below="@+id/ic_cross"
        android:id="@+id/tv_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_20"
        android:drawablePadding="@dimen/dp_10"
        android:fontFamily="@font/cerapro_medium"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp_10"
        android:text="@string/enough_balance_alert"
        android:textColor="@color/dark_black"
        android:textSize="@dimen/size_14" />

    <LinearLayout
        android:id="@+id/tv_merchant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_top_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_merchant"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/gray_strok_backgourd"
            android:fontFamily="@font/cerapro_medium"
            android:gravity="center"
            android:padding="@dimen/dp_12"
            android:text="@string/top_up"
            android:textAllCaps="false"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/size_16" />

        <Button
            android:id="@+id/btn_adjust_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_merchant"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/rounded_btn_selector_yellowish"
            android:fontFamily="@font/cerapro_medium"
            android:gravity="center"
            android:padding="@dimen/dp_12"
            android:text="@string/adjust_limit"
            android:textAllCaps="false"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/size_16" />

    </LinearLayout>


</RelativeLayout>