<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="requestWithdrawalVM"
            type="com.monayuser.ui.requestwithdrawal.RequestWithdrawalViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            android:minHeight="65sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent">

                <LinearLayout
                    android:id="@+id/ll_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:onClick="@{()->requestWithdrawalVM.backToPreviousActivity()}"
                        android:src="@mipmap/ic_back_white" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toEndOf="@id/ll_back"
                    android:text="@string/withdraw_money"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_18"
                    app:fontFamily="@font/cerapro_medium" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/dp_25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/dp_25" />

        <View
            android:id="@+id/view_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/light_blue_color"
            app:layout_constraintBottom_toBottomOf="@id/view_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <TextView
            android:id="@+id/tv_wallet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:fontFamily="@font/cerapro_regular"
            android:text="@string/wallet_balance"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/size_18"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/tv_total_cashback" />

        <TextView
            android:id="@+id/tv_total_cashback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_15"
            android:fontFamily="@font/cerapro_medium"
            android:gravity="center"
            android:text="$0"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/size_25"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <View
            android:id="@+id/view_one"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_25"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_wallet_text" />

        <TextView
            android:id="@+id/tv_amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:fontFamily="@font/cerapro_bold"
            android:text="@string/amount"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/size_14"
            app:layout_constraintStart_toEndOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/view_bg" />

        <TextView
            android:id="@+id/tv_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/cerapro_medium"
            android:text="@string/dollor_sign"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/size_35"
            app:layout_constraintStart_toStartOf="@id/tv_amount_text"
            app:layout_constraintTop_toBottomOf="@id/tv_amount_text" />

        <EditText
            android:id="@+id/et_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:background="@color/transparent"
            android:cursorVisible="true"
            android:fontFamily="@font/cerapro_medium"
            android:maxLength="6"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:hint="@string/enter_amount"
            android:inputType="numberDecimal"
            android:textColor="@color/dark_black"
            android:textColorHint="@color/gray_light"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/size_35"
            app:layout_constraintEnd_toStartOf="@id/guideline3"
            app:layout_constraintStart_toEndOf="@id/tv_currency"
            app:layout_constraintTop_toTopOf="@id/tv_currency" />

        <View
            android:id="@+id/view_amount"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/gray_btn_bg_color"
            app:layout_constraintEnd_toEndOf="@id/guideline3"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/et_amount" />

        <TextView
            android:id="@+id/tv_bank_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_35"
            android:fontFamily="@font/cerapro_bold"
            android:text="@string/select_bank_account"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/size_14"
            app:layout_constraintStart_toEndOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/view_amount" />


        <EditText
            android:id="@+id/et_bank_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/transparent"
            android:cursorVisible="true"
            android:drawableEnd="@mipmap/ic_drop_down"
            android:focusable="false"
            android:fontFamily="@font/cerapro_medium"
            android:gravity="center_vertical"
            android:inputType="text"
            android:singleLine="true"
            android:text="Citygroup Inc."
            android:textColor="@color/dark_black"
            android:textColorHint="@color/gray_light"
            android:textCursorDrawable="@color/colorPrimary"
            android:textSize="@dimen/size_18"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/guideline3"
            app:layout_constraintStart_toStartOf="@id/tv_amount_text"
            app:layout_constraintTop_toBottomOf="@id/tv_bank_text" />

        <Spinner
            android:id="@+id/sp_bank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:backgroundTint="@color/white"
            app:layout_constraintEnd_toEndOf="@id/guideline3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_bank_text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_down_arrow"
            android:layout_marginEnd="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="@id/sp_bank"
            app:layout_constraintBottom_toBottomOf="@id/sp_bank"
            app:layout_constraintEnd_toEndOf="@id/sp_bank"/>

        <View
            android:id="@+id/view_bank"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/gray_btn_bg_color"
            app:layout_constraintEnd_toEndOf="@id/guideline3"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/sp_bank" />

        <Button
            android:id="@+id/btn_send_request"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_25"
            android:background="@drawable/rounded_btn_selector_yellowish"
            android:fontFamily="@font/cerapro_medium"
            android:gravity="center"
            android:onClick="@{()-> requestWithdrawalVM.clickOnSendRequest()}"
            android:padding="@dimen/dp_15"
            android:text="@string/send_request"
            android:textAllCaps="false"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/size_18"
            app:layout_constraintEnd_toEndOf="@id/guideline3"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/view_bank" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
