<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_10"
            android:background="@color/transparent"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5"
            tools:ignore="RtlHardcoded">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userIV"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@mipmap/ic_user_icon"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/middle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_15">

                <TextView
                    android:id="@+id/full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/cerapro_medium"
                    android:lineSpacingExtra="@dimen/dp_5"
                    android:text="Amy Mello"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_16"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/timeTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/dp_5"
                    android:fontFamily="@font/cerapro_medium"
                    android:text="29 May 2020, 2:54 PM"
                    android:textColor="@color/ligh_black"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/dp_10"
                    android:ellipsize="end"
                    android:fontFamily="@font/cerapro_medium"
                    android:lineSpacingExtra="@dimen/dp_5"
                    android:maxLines="2"
                    android:text="@string/urgently_require_money_for_treatment"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/size_14"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cerapro_medium"
                    android:gravity="end"
                    android:text="$56,789"
                    android:textColor="@color/carban_black"
                    android:textSize="@dimen/size_18" />

                <TextView
                    android:id="@+id/payment_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_2"
                    android:fontFamily="@font/cerapro_medium"
                    android:gravity="center|end"
                    android:text="Paid"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/size_12"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:visibility="gone">

            <Button
                android:id="@+id/declineText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/border_bg_red"
                android:fontFamily="@font/cerapro_medium"
                android:gravity="center"
                android:minHeight="0dp"
                android:padding="@dimen/dp_10"
                android:text="@string/decline"
                android:textAllCaps="false"
                android:textColor="@color/red" />

            <Button
                android:id="@+id/payText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/rounded_btn_selector_yellowish"
                android:fontFamily="@font/cerapro_medium"
                android:gravity="center"
                android:minHeight="0dp"
                android:padding="@dimen/dp_10"
                android:text="@string/pay"
                android:textAllCaps="false"
                android:textColor="@color/dark_black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:background="@color/light_gray" />
    </LinearLayout>

</LinearLayout>




