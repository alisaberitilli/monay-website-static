<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        tools:ignore="MissingPrefix">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:background="@color/transparent"
                android:orientation="horizontal"
                tools:ignore="RtlHardcoded">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userIV"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center"
                    android:src="@mipmap/ic_user_icon"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/middle_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/size_15">

                    <TextView
                        android:id="@+id/full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/cerapro_medium"
                        android:lineSpacingExtra="@dimen/dp_5"
                        android:text="Amy Mello"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/size_16"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/timeTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/dp_5"
                        android:fontFamily="@font/cerapro_medium"
                        android:text="29 May 2020, 2:54 PM"
                        android:textColor="@color/gray_color"
                        android:textSize="@dimen/size_14" />

                </LinearLayout>

                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:fontFamily="@font/cerapro_medium"
                    android:text="$56,78943434"
                    android:textAlignment="center"
                    android:textColor="@color/carban_black"
                    android:textSize="@dimen/size_18" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <Button
                    android:id="@+id/btnDecline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/border_bg_red"
                    android:fontFamily="@font/cerapro_medium"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:padding="@dimen/dp_10"
                    android:text="@string/decline"
                    android:textAllCaps="false"
                    android:textColor="@color/red" />

                <Button
                    android:id="@+id/payText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_btn_selector_yellowish"
                    android:fontFamily="@font/cerapro_medium"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:padding="@dimen/dp_10"
                    android:text="@string/pay"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_black" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>




