<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/cerapro_bold"
                android:text="@string/add_new_bank"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/size_18" />

            <ImageView
                android:id="@+id/imageCloseDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/ic_cross"
                android:tint="@color/dark_black" />

        </RelativeLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_holder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cerapro_regular"
                android:hint="@string/accounts_holder_s_name"
                android:imeOptions="actionNext"
                android:inputType="textCapWords|textPersonName"
                android:padding="@dimen/dp_18"
                android:maxLength="50"
                android:singleLine="true"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/gray_color"
                android:textSize="@dimen/size_15"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/et_holder_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/gray_strok_backgourd"
            android:fontFamily="@font/cerapro_regular"
            android:hint="@string/accounts_holder_s_name"
            android:imeOptions="actionNext"
            android:inputType="textCapWords|textPersonName"
            android:padding="@dimen/dp_18"
            android:singleLine="true"
            android:textColor="@color/dark_black"
            android:textColorHint="@color/gray_color"
            android:textSize="@dimen/size_15"
            android:visibility="gone" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cerapro_regular"
                android:hint="@string/bank_name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="@dimen/dp_18"
                android:maxLength="50"
                android:singleLine="true"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/gray_color"
                android:textSize="@dimen/size_15"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/et_bank_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/gray_strok_backgourd"
            android:fontFamily="@font/cerapro_regular"
            android:hint="@string/bank_name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="@dimen/dp_18"
            android:singleLine="true"
            android:textColor="@color/dark_black"
            android:textColorHint="@color/gray_color"
            android:textSize="@dimen/size_15"
            android:visibility="gone" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_account_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cerapro_regular"
                android:hint="@string/bank_account_no"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:padding="@dimen/dp_18"
                android:maxLength="30"
                android:singleLine="true"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/gray_color"
                android:textSize="@dimen/size_15"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/et_account_no1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/gray_strok_backgourd"
            android:fontFamily="@font/cerapro_regular"
            android:hint="@string/bank_account_no"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:padding="@dimen/dp_18"
            android:singleLine="true"
            android:textColor="@color/dark_black"
            android:textColorHint="@color/gray_color"
            android:textSize="@dimen/size_15"
            android:visibility="gone" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ifscNumberText"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_20">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_ifsc_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cerapro_regular"
                android:hint="@string/ifsc_code"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="@dimen/dp_18"
                android:singleLine="true"
                android:maxLength="30"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/gray_color"
                android:textSize="@dimen/size_15"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/routeNumberText"
            android:layout_marginTop="@dimen/dp_20">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_routing_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cerapro_regular"
                android:hint="@string/routing_aba_number"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:padding="@dimen/dp_18"
                android:singleLine="true"
                android:maxLength="30"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/gray_color"
                android:textSize="@dimen/size_15"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/et_routing_no1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/gray_strok_backgourd"
            android:fontFamily="@font/cerapro_regular"
            android:hint="@string/routing_aba_number"
            android:imeOptions="actionNext"
            android:inputType="textCapCharacters"
            android:padding="@dimen/dp_18"
            android:singleLine="true"
            android:textColor="@color/dark_black"
            android:textColorHint="@color/gray_color"
            android:textSize="@dimen/size_15"
            android:visibility="gone" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/swiftNumberText"
            android:layout_marginTop="@dimen/dp_20">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_swift_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cerapro_regular"
                android:hint="@string/swift_code"
                android:imeOptions="actionDone"
                android:inputType="textCapCharacters"
                android:padding="@dimen/dp_18"
                android:singleLine="true"
                android:maxLength="30"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/gray_color"
                android:textSize="@dimen/size_15"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/et_swift_code1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/gray_strok_backgourd"
            android:fontFamily="@font/cerapro_regular"
            android:hint="@string/swift_code"
            android:imeOptions="actionDone"
            android:inputType="textCapCharacters"
            android:padding="@dimen/dp_18"
            android:singleLine="true"
            android:textColor="@color/dark_black"
            android:textColorHint="@color/gray_color"
            android:textSize="@dimen/size_15"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@drawable/rounded_btn_selector_yellowish"
            android:fontFamily="@font/cerapro_medium"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="@string/save_details"
            android:textAllCaps="false"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/size_18" />

    </LinearLayout>
</ScrollView>