<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10"
        tools:ignore="RtlHardcoded">

        <RadioButton
            android:id="@+id/radioBankCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_checkbox" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/middle_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/size_15">

                    <TextView
                        android:id="@+id/card_bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/cerapro_medium"
                        android:lineSpacingExtra="@dimen/dp_5"
                        android:text="Axis Bank Credit Card"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/size_16"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvLastDigit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/dp_10"
                        android:fontFamily="@font/cerapro_medium"
                        android:text="xxxx 0002"
                        android:textColor="@color/gray_color"
                        android:textSize="@dimen/size_12" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/cardIV"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_35"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_default_card"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cvv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15"
                android:visibility="gone"
                android:weightSum="10">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_weight="3">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCvv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cerapro_regular"
                        android:hint="@string/cvv"
                        android:imeOptions="actionDone"
                        android:inputType="numberPassword"
                        android:maxLength="4"
                        android:padding="@dimen/dp_12"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/gray_color"
                        android:textSize="@dimen/size_15"></com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

                <EditText
                    android:id="@+id/etCvv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_weight="3"
                    android:background="@drawable/gray_strok_backgourd"
                    android:fontFamily="@font/cerapro_regular"
                    android:gravity="center"
                    android:hint="@string/cvv"
                    android:imeOptions="actionDone"
                    android:inputType="numberPassword"
                    android:maxLength="4"
                    android:padding="@dimen/dp_12"
                    android:textColor="@color/dark_black"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/size_15"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_weight="7"
                    android:background="@drawable/rounded_btn_selector_yellowish"
                    android:fontFamily="@font/cerapro_medium"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:padding="@dimen/dp_12"
                    android:text="@string/pay"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_15" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/light_gray" />
</LinearLayout>




