<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:ignore="MissingPrefix">

    <data>
        <variable
            name="autoTopUpPinVM"
            type="com.monayuser.ui.autotopuppinverify.AutoTopUpMPinViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/full_transparent"
                android:onClick="@{()->autoTopUpPinVM.backToPreviousScreen()}"
                android:src="@mipmap/ic_back_white"
                android:tint="@color/dark_black" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/headerTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center|start"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/dp_20"
                app:fontFamily="@font/cerapro_medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#F2F2F3"

            android:orientation="vertical"></LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:fillViewport="true">

            <RelativeLayout
                android:id="@+id/activity_spash_screen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_100"
                    android:layout_marginRight="@dimen/dp_30"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/forgotPin_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"

                        android:layout_centerHorizontal="true"

                        android:layout_gravity="center"

                        android:src="@mipmap/ic_logo_blue"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/enterPinTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_70"
                        android:fontFamily="@font/cerapro_regular"
                        android:gravity="center"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/enter_forgot_pin"
                        android:textAlignment="center"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/size_20" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="vertical">

                        <com.monayuser.utils.PinView
                            android:id="@+id/forgotPinview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:cursorVisible="true"
                            android:focusable="false"
                            android:focusableInTouchMode="true"
                            android:focusedByDefault="false"
                            android:textCursorDrawable="@drawable/cursor_color"
                            app:forceKeyboard="false"
                            app:hint="0"
                            app:inputType="number"
                            app:password="true"
                            app:pinHeight="@dimen/dp_50"
                            app:pinLength="4"
                            app:pinWidth="@dimen/dp_65"
                            app:splitWidth="@dimen/dp_10"
                            app:textSize="@dimen/size_7" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/dp_45"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_1"
                        android:fontFamily="@font/cerapro_regular"
                        android:gravity="center"
                        android:lineSpacingExtra="8sp"
                        android:onClick="@{()->autoTopUpPinVM.forgotPin()}"
                        android:paddingRight="@dimen/dp_5"
                        android:text="@string/forgot_pin"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/size_18"
                        android:textStyle="bold" />

                    <LinearLayout

                        android:layout_width="@dimen/dp_80"
                        android:layout_height="1dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/dp_43"
                        android:background="@color/white"
                        android:gravity="center"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btnConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_marginTop="@dimen/dp_50"
                        android:layout_marginRight="@dimen/dp_3"
                        android:layout_marginBottom="@dimen/dp_30"
                        android:background="@drawable/rounded_btn_selector_yellowish"
                        android:fontFamily="@font/cerapro_medium"
                        android:gravity="center"
                        android:onClick="@{()-> autoTopUpPinVM.confirmPin()}"
                        android:padding="@dimen/dp_15"
                        android:text="@string/proceed"
                        android:textAllCaps="false"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/size_18" />
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</layout>