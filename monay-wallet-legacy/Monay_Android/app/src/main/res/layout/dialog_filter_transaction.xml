<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_30"
        android:paddingTop="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/cerapro_medium"
                android:text="@string/filter"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/size_18" />

            <ImageView
                android:id="@+id/imageCloseDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/ic_cross"
                android:tint="@color/dark_black" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvFromDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/gray_strok_backgourd"
                    android:drawableRight="@mipmap/ic_calendar"
                    android:focusable="false"
                    android:focusedByDefault="false"
                    android:fontFamily="@font/cerapro_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/from_date"
                    android:padding="@dimen/dp_15"
                    android:singleLine="true"
                    android:textColor="@color/dark_black"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/size_15"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvToDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/gray_strok_backgourd"
                    android:drawableRight="@mipmap/ic_calendar"
                    android:focusable="false"
                    android:focusedByDefault="false"
                    android:fontFamily="@font/cerapro_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/to_date"
                    android:padding="@dimen/dp_15"
                    android:singleLine="true"
                    android:textColor="@color/dark_black"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/size_15"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cerapro_regular"
                android:hint="@string/name"
                android:inputType="textPersonName|textCapWords"
                android:maxLength="25"
                android:padding="@dimen/dp_18"
                android:singleLine="true"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/gray_color"
                android:textSize="@dimen/size_15"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/gray_strok_backgourd">

            <Spinner
                android:id="@+id/sp_transaction"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:backgroundTint="@color/dark_black"
                android:dropDownSelector="@color/dark_black"
                android:popupBackground="@color/white"
                android:visibility="visible"
                tools:listitem="@layout/spinner_transaction" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMinAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/cerapro_regular"
                    android:hint="@string/min_price"
                    android:inputType="number"
                    android:padding="@dimen/dp_18"
                    android:singleLine="true"
                    android:textColor="@color/dark_black"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/size_15"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMaxAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/cerapro_regular"
                    android:hint="@string/max_price"
                    android:inputType="number"
                    android:padding="@dimen/dp_18"
                    android:singleLine="true"
                    android:textColor="@color/dark_black"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/size_15"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


        <Button
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/rounded_btn_selector_yellowish"
            android:fontFamily="@font/cerapro_medium"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="@string/apply_filter"
            android:textAllCaps="false"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/size_18" />

        <TextView
            android:id="@+id/tvReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/underline"
            android:fontFamily="@font/cerapro_regular"
            android:gravity="center"
            android:text="@string/reset_filter"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size_14" />

    </LinearLayout>
</ScrollView>