<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="requestMoneyVM"
            type="com.monayuser.ui.requestmoney.RequestMoneyViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarPayMoney"
            android:layout_width="match_parent"
            android:layout_height="65sp"
            android:layout_gravity="top"
            android:background="@color/colorPrimary"
            android:minHeight="65sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:onClick="@{()->requestMoneyVM.backToPreviousActivity()}"
                    android:padding="@dimen/dp_12">

                    <ImageView
                        android:id="@+id/back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/full_transparent"
                        android:onClick="@{()->requestMoneyVM.backToPreviousActivity()}"
                        android:src="@mipmap/ic_back_white"
                        android:tint="@color/white" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dp_120"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center|start"
                    android:text="@string/request_money"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_20"
                    app:fontFamily="@font/cerapro_medium" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbarPayMoney"
            android:fadingEdge="none"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/dp_20"
                        android:paddingStart="@dimen/dp_15"
                        android:paddingEnd="@dimen/dp_15"
                        android:paddingBottom="@dimen/dp_20"
                        android:background="@color/light_blue_color"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/userIV"
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="@dimen/dp_60"
                            android:layout_gravity="center"
                            android:gravity="center|top"
                            android:src="@mipmap/ic_user_icon"
                            android:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/middle_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/size_15">

                            <TextView
                                android:id="@+id/full_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/cerapro_medium"
                                android:lineSpacingExtra="@dimen/dp_5"
                                tools:text="Amy Mello"
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/size_18"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/tvMobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginTop="@dimen/dp_10"
                                android:fontFamily="@font/cerapro_medium"
                                tools:text="123-456-78901"
                                android:textColor="@color/gray_color"
                                android:textSize="@dimen/size_16" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/or_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_25"
                        android:fontFamily="@font/cerapro_bold"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/amount"
                        android:textColor="@color/gray_color"
                        android:textSize="@dimen/size_14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_25"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_currency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cerapro_medium"
                            android:lineSpacingExtra="8sp"
                            android:text="@string/dollor_sign"
                            android:textColor="@color/gray_color"
                            android:textSize="@dimen/size_28" />

                        <EditText
                            android:id="@+id/amount_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:background="@null"
                            android:cursorVisible="true"
                            android:fontFamily="@font/cerapro_bold"
                            android:hint="@string/enter_amount"
                            android:inputType="numberDecimal"
                            android:singleLine="true"
                            android:text=""
                            android:imeOptions="actionDone"
                            android:maxLength="6"
                            android:textColor="@color/dark_black"
                            android:textColorHint="@color/gray_light"
                            android:textSize="@dimen/size_28" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_25"
                        android:background="@color/gray_btn_bg_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_25"
                        android:fontFamily="@font/cerapro_bold"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/message_optional"
                        android:textColor="@color/gray_color"
                        android:textSize="@dimen/size_14" />

                    <EditText
                        android:id="@+id/message_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_25"
                        android:background="@color/transparent"
                        android:cursorVisible="true"
                        android:fontFamily="@font/cerapro_regular"
                        android:hint="@string/enter_message"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:imeOptions="actionDone"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/gray_light"
                        android:textSize="@dimen/size_18" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_25"
                        android:background="@color/gray_btn_bg_color" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_45"
                        android:layout_marginTop="@dimen/dp_50"
                        android:layout_marginRight="@dimen/dp_45"
                        android:background="@drawable/rounded_btn_selector_yellowish"
                        android:fontFamily="@font/cerapro_medium"
                        android:gravity="center"
                        android:onClick="@{()->requestMoneyVM.successToSentMoney()}"
                        android:padding="@dimen/dp_15"
                        android:text="@string/request"
                        android:textAllCaps="false"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/size_18" />

                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

</layout>