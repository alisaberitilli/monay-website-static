<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.HomeFragment">

    <data>

        <variable
            name="homeViewModel"
            type="com.monayuser.ui.home.HomeViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_400"
            android:background="@mipmap/bg_profile"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="65sp"
            android:layout_gravity="top"
            android:background="@color/transparent"
            android:minHeight="65sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageUser"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@mipmap/ic_user_icon"
                    android:transitionName="imagePass"
                    android:onClick="@{()->homeViewModel.openProfile()}" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imageUser"
                    app:layout_constraintEnd_toStartOf="@id/iv_notification"
                    android:fontFamily="@font/cerapro_medium"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/dp_2"
                    android:text="Hi, Harry Porter"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_16" />

                <ImageView
                    android:id="@+id/iv_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:onClick="@{()->homeViewModel.openNotification()}"
                    android:padding="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:src="@mipmap/ic_notification" />

                <Space
                    android:id="@+id/space"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    app:layout_constraintEnd_toEndOf="@id/iv_notification"
                    app:layout_constraintTop_toTopOf="@id/iv_notification" />

                <TextView
                    android:id="@+id/notificationBadgeCountTV"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/white_circle_badge"
                    android:text="0"
                    android:onClick="@{()->homeViewModel.openNotification()}"
                    app:layout_constraintStart_toStartOf="@id/space"
                    app:layout_constraintBottom_toBottomOf="@id/space"
                  android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/size_10" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ll_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_20"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_wallet_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:fontFamily="@font/cerapro_regular"
                        android:gravity="center"
                        android:text="@string/wallet_balance"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_16" />


                    <TextView
                        android:id="@+id/total_cashback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:fontFamily="@font/cerapro_bold"
                        android:gravity="center"
                        android:text="0.00"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_35" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_new"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_35"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_amount">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/dp_5"
                        app:cardElevation="@dimen/dp_5"
                        tools:ignore="MissingPrefix">

                        <TextView
                            android:id="@+id/btnAddMoney"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gray_btn_selector"
                            android:fontFamily="@font/cerapro_bold"
                            android:gravity="center"
                            android:lineSpacingExtra="@dimen/dp_7"
                            android:onClick="@{()->homeViewModel.addMoney()}"
                            android:paddingTop="@dimen/dp_30"
                            android:paddingBottom="@dimen/dp_30"
                            android:text="@string/add_nmoney"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/size_18" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/dp_5"
                        app:cardElevation="@dimen/dp_5"
                        tools:ignore="MissingPrefix">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_btn_selector_yellowish"
                            android:fontFamily="@font/cerapro_bold"
                            android:gravity="center"
                            android:lineSpacingExtra="@dimen/dp_7"
                            android:onClick="@{()->homeViewModel.sendMoney()}"
                            android:paddingTop="@dimen/dp_30"
                            android:paddingBottom="@dimen/dp_30"
                            android:text="@string/send_nmoney"
                            android:textAllCaps="true"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/size_18" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/dp_5"
                        app:cardElevation="@dimen/dp_5"
                        tools:ignore="MissingPrefix">

                        <TextView
                            android:id="@+id/btnRequestMoney"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gray_btn_selector"
                            android:fontFamily="@font/cerapro_bold"
                            android:gravity="center"
                            android:lineSpacingExtra="@dimen/dp_7"
                            android:onClick="@{()->homeViewModel.requestMoney()}"
                            android:paddingTop="@dimen/dp_30"
                            android:paddingBottom="@dimen/dp_30"
                            android:text="@string/request_nmoney"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/size_18" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/middle_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginEnd="65dp"
                    android:layout_marginBottom="55dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_amount">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/dp_4"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/dp_10"
                        tools:ignore="MissingPrefix">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cerapro_medium"
                            android:gravity="center"
                            android:onClick="@{()->homeViewModel.sendMoney()}"
                            android:padding="@dimen/dp_20"
                            android:text="@string/send_money"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/size_18" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/requestMoneyCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:elevation="@dimen/dp_4"
                        app:cardBackgroundColor="@color/yellowish"
                        app:cardCornerRadius="@dimen/dp_10"
                        tools:ignore="MissingPrefix">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cerapro_medium"
                            android:gravity="center"
                            android:onClick="@{()->homeViewModel.requestMoney()}"
                            android:padding="@dimen/dp_20"
                            android:text="@string/request_money"
                            android:textAllCaps="true"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/size_18" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvWithdraw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:elevation="@dimen/dp_4"
                        android:onClick="@{()->homeViewModel.withdrawMoney()}"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/dp_10"
                        tools:ignore="MissingPrefix">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cerapro_medium"
                            android:gravity="center"
                            android:onClick="@{()->homeViewModel.withdrawMoney()}"
                            android:padding="@dimen/dp_20"
                            android:text="@string/withdraw_money"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/size_18" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <View
                    android:id="@+id/view_background"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@drawable/white_success_curve"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_new" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/view_background"
                    app:layout_constraintVertical_bias="0.0">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">


                        <RelativeLayout
                            android:id="@+id/payment_request_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:padding="@dimen/dp_10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cerapro_medium"
                                android:text="@string/payment_request"
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/dp_18" />


                            <TextView
                                android:id="@+id/tv_payment_all"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:fontFamily="@font/cerapro_medium"
                                android:onClick="@{()->homeViewModel.viewAllRequest()}"
                                android:text="@string/view_all"
                                android:background="@drawable/underline"
                                android:backgroundTint="@color/colorPrimary"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/dp_16"
                                android:visibility="visible" />

                        </RelativeLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerPaymentRequest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:visibility="gone"
                            tools:itemCount="1"
                            tools:listitem="@layout/item_payment_request_home" />

                        <TextView
                            android:id="@+id/tv_no_request"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_100"
                            android:fontFamily="@font/cerapro_medium"
                            android:gravity="center"
                            android:text="@string/no_request_found"
                            android:textColorLink="@color/gray_color"
                            android:textSize="@dimen/size_16"
                            android:visibility="visible" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:padding="@dimen/dp_10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cerapro_medium"
                                android:text="@string/recent_transaction"
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/dp_18" />


                            <TextView
                                android:id="@+id/tv_recent_all"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:fontFamily="@font/cerapro_medium"
                                android:onClick="@{()->homeViewModel.viewAllTransaction()}"
                                android:text="@string/view_all"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/dp_16"
                                android:background="@drawable/underline"
                                android:backgroundTint="@color/colorPrimary"
                                android:visibility="gone" />

                        </RelativeLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerRecentTransaction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:visibility="gone"
                            tools:itemCount="3"
                            tools:listitem="@layout/item_transaction_list" />

                        <TextView
                            android:id="@+id/tv_no_transaction"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_100"
                            android:fontFamily="@font/cerapro_medium"
                            android:gravity="center"
                            android:text="No Transaction Found"
                            android:textColorLink="@color/gray_color"
                            android:textSize="@dimen/size_16"
                            android:visibility="visible" />
                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/noInternetConnectionLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/topLayout"
                        android:layout_marginTop="-100dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/noInternet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/cerapro_medium"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="@string/no_internet"
                            android:textColor="@color/gray_color"
                            android:textSize="@dimen/size_18"
                            android:visibility="visible" />

                        <com.dd.ShadowLayout
                            android:id="@+id/try_again"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/noInternet"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_70"
                            android:minWidth="180dp"
                            android:onClick="@{()->homeViewModel.tryAgain()}"
                            app:sl_cornerRadius="30dp"
                            app:sl_dx="3dp"
                            app:sl_dy="3dp"
                            app:sl_fillColor="@color/colorPrimary"
                            app:sl_shadowColor="#C5E1F1"
                            app:sl_shadowRadius="10dp">

                            <Button
                                android:id="@+id/try_again_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="45dp"
                                android:layout_gravity="top|center"
                                android:background="#00000000"
                                android:fontFamily="@font/cerapro_medium"
                                android:gravity="center"
                                android:onClick="@{()->homeViewModel.tryAgain()}"
                                android:text="@string/try_again_text"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/size_18" />

                        </com.dd.ShadowLayout>

                    </RelativeLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

