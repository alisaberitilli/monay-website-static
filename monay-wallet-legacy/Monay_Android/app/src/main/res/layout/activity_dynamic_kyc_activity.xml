<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dynamicKycVM"
            type="com.monayuser.ui.kyc.dynamic_kyc.DynamicKYCViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/myCardTool"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="top"
            android:background="@color/colorPrimary"
            android:minHeight="65sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:background="@color/full_transparent"
                        android:onClick="@{()->dynamicKycVM.clickOnBackButton()}"
                        android:src="@mipmap/ic_back_white"
                        app:tint="@color/white" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@string/kyc"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_18"
                    app:fontFamily="@font/cerapro_medium" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myCardTool"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="143dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/dp_10">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:fontFamily="@font/cerapro_medium"
                    android:text="@string/complete_your_kyc"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_18"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/dp_20" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/dp_20" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_picture_document"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="@font/cerapro_regular"
                    android:text="@string/_1_select_picture_identification_document"
                    android:textColor="@color/ligh_black"
                    android:textSize="@dimen/size_14"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@+id/tv_complete" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dynamicKycPictureRecyclerView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    app:layout_constraintEnd_toEndOf="@id/guideline1"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@+id/tv_picture_document" />


                <View
                    android:id="@+id/view_image"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_180"
                    android:layout_marginTop="@dimen/dp_20"
                    android:onClick="@{()->dynamicKycVM.clickOnPictureImageUpload()}"
                    android:background="@drawable/gray_dotted_rectangle_border"
                    app:layout_constraintEnd_toEndOf="@id/guideline1"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/dynamicKycPictureRecyclerView" />

                <ImageView
                    android:id="@+id/iv_upload_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/upload_image"
                    android:src="@mipmap/ic_upload_doc"
                    android:onClick="@{()->dynamicKycVM.clickOnPictureImageUpload()}"
                    app:layout_constraintBottom_toTopOf="@id/tv_upload_image"
                    app:layout_constraintEnd_toEndOf="@id/view_image"
                    app:layout_constraintStart_toStartOf="@id/view_image"
                    app:layout_constraintTop_toTopOf="@id/view_image"
                    app:layout_constraintVertical_chainStyle="packed" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_upload_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="@font/cerapro_medium"
                    android:text="@string/upload_document"
                    android:textColor="@color/ligh_black"
                    android:textSize="@dimen/size_14"
                    android:onClick="@{()->dynamicKycVM.clickOnPictureImageUpload()}"
                    app:layout_constraintBottom_toTopOf="@id/tv_support_image"
                    app:layout_constraintEnd_toEndOf="@id/view_image"
                    app:layout_constraintStart_toStartOf="@id/view_image"
                    app:layout_constraintTop_toBottomOf="@id/iv_upload_image" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_support_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:fontFamily="@font/cerapro_medium"
                    android:text="@string/support_file_pdf_jpg_jpeg_png"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/size_12"
                    android:onClick="@{()->dynamicKycVM.clickOnPictureImageUpload()}"
                    app:layout_constraintBottom_toBottomOf="@id/view_image"
                    app:layout_constraintEnd_toEndOf="@id/view_image"
                    app:layout_constraintStart_toStartOf="@id/view_image"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_image" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:constraint_referenced_ids="tv_support_image, tv_upload_image, iv_upload_image, view_image" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_10"
                    app:cardCornerRadius="@dimen/dp_15"
                    app:layout_constraintEnd_toStartOf="@id/ivDelete"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/dynamicKycPictureRecyclerView">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/iv_identification"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_180"
                            android:contentDescription="@string/upload_image"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:layout_editor_absoluteX="0dp" />

                        <com.monayuser.utils.TouchyWebView
                            android:id="@+id/wv_identification"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_180"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/iv_upload_image_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/upload_image"
                            android:src="@mipmap/ic_upload_doc"
                            android:visibility="gone"
                            app:layout_constraintBottom_toTopOf="@id/tv_upload_image_new"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_chainStyle="packed" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_upload_image_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:fontFamily="@font/cerapro_medium"
                            android:text="@string/document_uploaded"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/size_14"
                            android:visibility="gone"
                            android:onClick="@{()->dynamicKycVM.navigator.clickOnIdentificationDoc()}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_upload_image_new" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/ivDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/ic_delete_card"
                    android:contentDescription="@string/delete"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:onClick="@{()->dynamicKycVM.navigator.clickOnDeleteImage()}"
                    android:paddingBottom="@dimen/dp_15"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/cv_image"
                    app:layout_constraintEnd_toEndOf="@id/guideline1"
                    app:layout_constraintTop_toTopOf="@id/cv_image" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="cv_image, view_image" />

                <View
                    android:id="@+id/view_image_back"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_180"
                    android:layout_marginTop="@dimen/dp_20"
                    android:onClick="@{()->dynamicKycVM.clickOnPictureBackImageUpload()}"
                    android:background="@drawable/gray_dotted_rectangle_border"
                    app:layout_constraintEnd_toEndOf="@id/guideline1"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/view_image" />

                <ImageView
                    android:id="@+id/iv_upload_image_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/upload_image"
                    android:src="@mipmap/ic_upload_doc"
                    android:onClick="@{()->dynamicKycVM.clickOnPictureBackImageUpload()}"
                    app:layout_constraintBottom_toBottomOf="@id/view_image_back"
                    app:layout_constraintEnd_toEndOf="@id/view_image_back"
                    app:layout_constraintStart_toStartOf="@id/view_image_back"
                    app:layout_constraintTop_toTopOf="@id/view_image_back"
                    app:layout_constraintVertical_chainStyle="packed" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_upload_image_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="@font/cerapro_medium"
                    android:text="@string/upload_document"
                    android:textColor="@color/ligh_black"
                    android:onClick="@{()->dynamicKycVM.clickOnPictureBackImageUpload()}"
                    android:textSize="@dimen/size_14"
                    app:layout_constraintBottom_toTopOf="@id/tv_support_image_back"
                    app:layout_constraintEnd_toEndOf="@id/view_image_back"
                    app:layout_constraintStart_toStartOf="@id/view_image_back"
                    app:layout_constraintTop_toBottomOf="@id/iv_upload_image_back" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_support_image_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:fontFamily="@font/cerapro_medium"
                    android:text="@string/support_file_pdf_jpg_jpeg_png"
                    android:textColor="@color/gray_light"
                    android:onClick="@{()->dynamicKycVM.clickOnPictureBackImageUpload()}"
                    android:textSize="@dimen/size_12"
                    app:layout_constraintEnd_toEndOf="@id/view_image_back"
                    app:layout_constraintStart_toStartOf="@id/view_image_back"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_image_back" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_image_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:constraint_referenced_ids="tv_support_image_back, tv_upload_image_back, iv_upload_image_back, view_image_back" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_image_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_10"
                    app:cardCornerRadius="@dimen/dp_15"
                    app:layout_constraintEnd_toStartOf="@id/ivDeleteBack"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/cv_image">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_identification_back"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_180"
                            android:contentDescription="@string/upload_image"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.monayuser.utils.TouchyWebView
                            android:id="@+id/wv_identification_back"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_180"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/iv_upload_image_new_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/upload_image"
                            android:src="@mipmap/ic_upload_doc"
                            android:visibility="gone"
                            app:layout_constraintBottom_toTopOf="@id/tv_upload_image_new_back"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_chainStyle="packed" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_upload_image_new_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:fontFamily="@font/cerapro_medium"
                            android:text="@string/document_uploaded"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/size_14"
                            android:onClick="@{()->dynamicKycVM.navigator.clickOnOpenDocBack()}"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_upload_image_new_back" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/ivDeleteBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/ic_delete_card"
                    android:contentDescription="@string/delete"
                    android:paddingTop="@dimen/dp_15"
                    android:onClick="@{()->dynamicKycVM.navigator.clickOnDeleteBackImage()}"
                    android:paddingEnd="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/cv_image_back"
                    app:layout_constraintEnd_toEndOf="@id/guideline1"
                    app:layout_constraintTop_toTopOf="@id/cv_image_back" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier_image_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="cv_image_back, view_image_back" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_select_address_proof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:fontFamily="@font/cerapro_regular"
                    android:text="@string/_2_select_proof_of_address_obtained"
                    android:textColor="@color/ligh_black"
                    android:textSize="@dimen/size_14"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@+id/barrier_image_back" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dynamicKycAddressRecyclerView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    app:layout_constraintEnd_toEndOf="@id/guideline1"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@+id/tv_select_address_proof" />

                <View
                    android:id="@+id/view_address_image"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_180"
                    android:layout_marginTop="@dimen/dp_20"
                    android:onClick="@{()->dynamicKycVM.clickOnAddressImageUpload()}"
                    android:background="@drawable/gray_dotted_rectangle_border"
                    app:layout_constraintEnd_toEndOf="@id/guideline1"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/dynamicKycAddressRecyclerView" />

                <ImageView
                    android:id="@+id/iv_address_upload_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/upload_image"
                    android:src="@mipmap/ic_upload_doc"
                    android:onClick="@{()->dynamicKycVM.clickOnAddressImageUpload()}"
                    app:layout_constraintBottom_toTopOf="@id/tv_address_upload_image"
                    app:layout_constraintEnd_toEndOf="@id/view_address_image"
                    app:layout_constraintStart_toStartOf="@id/view_address_image"
                    app:layout_constraintTop_toTopOf="@id/view_address_image"
                    app:layout_constraintVertical_chainStyle="packed" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_address_upload_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="@font/cerapro_medium"
                    android:text="@string/upload_document"
                    android:textColor="@color/ligh_black"
                    android:textSize="@dimen/size_14"
                    android:onClick="@{()->dynamicKycVM.clickOnAddressImageUpload()}"
                    app:layout_constraintBottom_toTopOf="@id/tv_address_support_image"
                    app:layout_constraintEnd_toEndOf="@id/view_address_image"
                    app:layout_constraintStart_toStartOf="@id/view_address_image"
                    app:layout_constraintTop_toBottomOf="@id/iv_address_upload_image" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_address_support_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:fontFamily="@font/cerapro_medium"
                    android:text="@string/support_file_pdf_jpg_jpeg_png"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/size_12"
                    android:onClick="@{()->dynamicKycVM.clickOnAddressImageUpload()}"
                    app:layout_constraintBottom_toBottomOf="@id/view_address_image"
                    app:layout_constraintEnd_toEndOf="@id/view_address_image"
                    app:layout_constraintStart_toStartOf="@id/view_address_image"
                    app:layout_constraintTop_toBottomOf="@id/tv_address_upload_image" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_address_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:constraint_referenced_ids="tv_address_support_image, tv_address_upload_image, iv_address_upload_image, view_address_image" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_address_image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_10"
                    app:cardCornerRadius="@dimen/dp_15"
                    app:layout_constraintEnd_toStartOf="@id/ivAddressDelete"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/dynamicKycAddressRecyclerView">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_address_identification"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_180"
                            android:contentDescription="@string/upload_image"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.monayuser.utils.TouchyWebView
                            android:id="@+id/wv_address_identification"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_180"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/iv_address_upload_image_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/upload_image"
                            android:src="@mipmap/ic_upload_doc"
                            android:visibility="gone"
                            app:layout_constraintBottom_toTopOf="@id/tv_address_upload_image_new"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_chainStyle="packed" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_address_upload_image_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:fontFamily="@font/cerapro_medium"
                            android:text="@string/document_uploaded"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/size_14"
                            android:visibility="gone"
                            android:onClick="@{()->dynamicKycVM.navigator.clickOnAddressProofDoc()}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_address_upload_image_new" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/ivAddressDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/ic_delete_card"
                    android:contentDescription="@string/delete"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:onClick="@{()->dynamicKycVM.navigator.clickOnDeleteAddressImage()}"
                    android:paddingBottom="@dimen/dp_15"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/cv_address_image"
                    app:layout_constraintEnd_toEndOf="@id/guideline1"
                    app:layout_constraintTop_toTopOf="@id/cv_address_image" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier_address_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="cv_address_image, view_address_image" />

                <View
                    android:id="@+id/view_address_image_back"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_180"
                    android:layout_marginTop="@dimen/dp_20"
                    android:onClick="@{()->dynamicKycVM.clickOnAddressBackImageUpload()}"
                    android:background="@drawable/gray_dotted_rectangle_border"
                    app:layout_constraintEnd_toEndOf="@id/guideline1"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/view_address_image" />

                <ImageView
                    android:id="@+id/iv_upload_address_image_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/upload_image"
                    android:src="@mipmap/ic_upload_doc"
                    android:onClick="@{()->dynamicKycVM.clickOnAddressBackImageUpload()}"
                    app:layout_constraintBottom_toBottomOf="@id/view_address_image_back"
                    app:layout_constraintEnd_toEndOf="@id/view_address_image_back"
                    app:layout_constraintStart_toStartOf="@id/view_address_image_back"
                    app:layout_constraintTop_toTopOf="@id/view_address_image_back"
                    app:layout_constraintVertical_chainStyle="packed" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_upload_address_image_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="@font/cerapro_medium"
                    android:text="@string/upload_document"
                    android:textColor="@color/ligh_black"
                    android:onClick="@{()->dynamicKycVM.clickOnAddressBackImageUpload()}"
                    android:textSize="@dimen/size_14"
                    app:layout_constraintBottom_toTopOf="@id/tv_support_address_image_back"
                    app:layout_constraintEnd_toEndOf="@id/view_address_image_back"
                    app:layout_constraintStart_toStartOf="@id/view_address_image_back"
                    app:layout_constraintTop_toBottomOf="@id/iv_upload_address_image_back" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_support_address_image_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:fontFamily="@font/cerapro_medium"
                    android:text="@string/support_file_pdf_jpg_jpeg_png"
                    android:textColor="@color/gray_light"
                    android:onClick="@{()->dynamicKycVM.clickOnAddressBackImageUpload()}"
                    android:textSize="@dimen/size_12"
                    app:layout_constraintEnd_toEndOf="@id/view_address_image_back"
                    app:layout_constraintStart_toStartOf="@id/view_address_image_back"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_address_image_back" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_address_image_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:constraint_referenced_ids="tv_support_address_image_back, tv_upload_address_image_back, iv_upload_address_image_back, view_address_image_back" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_address_image_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_10"
                    app:cardCornerRadius="@dimen/dp_15"
                    app:layout_constraintEnd_toStartOf="@id/ivAddressDeleteBack"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/view_address_image">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_address_identification_back"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_180"
                            android:contentDescription="@string/upload_image"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.monayuser.utils.TouchyWebView
                            android:id="@+id/wv_address_identification_back"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_180"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/iv_upload_address_image_new_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/upload_image"
                            android:src="@mipmap/ic_upload_doc"
                            android:visibility="gone"
                            app:layout_constraintBottom_toTopOf="@id/tv_upload_address_image_new_back"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_chainStyle="packed" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_upload_address_image_new_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:fontFamily="@font/cerapro_medium"
                            android:text="@string/document_uploaded"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/size_14"
                            android:visibility="gone"
                            android:onClick="@{()->dynamicKycVM.navigator.clickOnAddressProofBackDoc()}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_upload_address_image_new_back" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/ivAddressDeleteBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/ic_delete_card"
                    android:contentDescription="@string/delete"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:onClick="@{()->dynamicKycVM.navigator.clickOnDeleteAddressBackImage()}"
                    android:paddingBottom="@dimen/dp_15"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/cv_address_image_back"
                    app:layout_constraintEnd_toEndOf="@id/guideline1"
                    app:layout_constraintTop_toTopOf="@id/cv_address_image_back" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier_address_image_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="cv_address_image_back, view_address_image_back" />

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@drawable/rounded_btn_selector_yellowish"
                    android:fontFamily="@font/cerapro_medium"
                    android:gravity="center"
                    android:onClick="@{()->dynamicKycVM.clickOnSubmitButton()}"
                    android:padding="@dimen/dp_15"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/size_18"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/guideline1"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/barrier_address_image_back"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>